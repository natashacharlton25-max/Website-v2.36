---
/**
 * Reusable Service Template Layout
 *
 * Usage:
 * import ServiceLayout from '../Layouts/ServiceLayout.astro';
 * <ServiceLayout service={serviceData} relatedServices={related} />
 */
import BaseLayout from './BaseLayout.astro';

interface Props {
  service: {
    title: string;
    slug: string;
    category: string;
    tagline: string;
    description: string;
    price?: string;
    duration?: string;
    icon?: string;
    features: string[];
    benefits: string[];
    process?: Array<{
      step: number;
      title: string;
      description: string;
    }>;
    faqs?: Array<{
      question: string;
      answer: string;
    }>;
    image?: string;
    bookingUrl?: string;
  };
  relatedServices?: Array<{
    title: string;
    slug: string;
    category: string;
    tagline: string;
    icon?: string;
  }>;
}

const { service, relatedServices = [] } = Astro.props;
---

<BaseLayout
  title={`${service.title} | Services`}
  description={service.description}
>
  <!-- Breadcrumbs -->
  <section class="breadcrumbs-section">
    <div class="container container-7xl">
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">›</span>
        <a href="/services">Services</a>
        <span class="separator">›</span>
        <span class="current">{service.title}</span>
      </nav>
    </div>
  </section>

  <!-- Service Hero -->
  <section class="service-hero section">
    <div class="container container-7xl">
      <div class="hero-grid">
        <div class="hero-content">
          <span class="service-category">{service.category}</span>
          <h1 class="service-title">{service.title}</h1>
          <p class="service-tagline">{service.tagline}</p>
          <p class="service-description">{service.description}</p>

          {(service.price || service.duration) && (
            <div class="service-meta">
              {service.price && (
                <div class="meta-item">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="1" x2="12" y2="23"/>
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                  </svg>
                  <span><strong>From</strong> {service.price}</span>
                </div>
              )}
              {service.duration && (
                <div class="meta-item">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  <span><strong>Duration:</strong> {service.duration}</span>
                </div>
              )}
            </div>
          )}

          <div class="cta-buttons">
            <a href={service.bookingUrl || '/contact'} class="btn btn-primary btn-lg">
              Book This Service
            </a>
            <a href="/contact" class="btn btn-outline btn-lg">
              Ask Questions
            </a>
          </div>
        </div>

        {service.image && (
          <div class="hero-image">
            <img src={service.image} alt={service.title} loading="eager" />
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="features-section section">
    <div class="container container-7xl">
      <h2 class="section-title text-center">What's Included</h2>
      <div class="features-grid">
        {service.features.map((feature, index) => (
          <div class="feature-card card">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
            </div>
            <p class="feature-text">{feature}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="benefits-section section">
    <div class="container container-6xl">
      <h2 class="section-title text-center">Key Benefits</h2>
      <div class="benefits-grid">
        {service.benefits.map((benefit, index) => (
          <div class="benefit-item">
            <div class="benefit-number">{index + 1}</div>
            <p class="benefit-text">{benefit}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process -->
  {service.process && service.process.length > 0 && (
    <section class="process-section section">
      <div class="container container-7xl">
        <h2 class="section-title text-center">Our Process</h2>
        <div class="process-timeline">
          {service.process.map((step, index) => (
            <div class="process-step">
              <div class="step-indicator">
                <span class="step-number">{step.step}</span>
              </div>
              <div class="step-content card">
                <h3 class="step-title">{step.title}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQs -->
  {service.faqs && service.faqs.length > 0 && (
    <section class="faq-section section">
      <div class="container container-6xl">
        <h2 class="section-title text-center">Frequently Asked Questions</h2>
        <div class="faq-list">
          {service.faqs.map((faq, index) => (
            <details class="faq-item card">
              <summary class="faq-question">
                {faq.question}
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9"/>
                </svg>
              </summary>
              <div class="faq-answer">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Related Services -->
  {relatedServices.length > 0 && (
    <section class="related-services-section section">
      <div class="container container-7xl">
        <h2 class="section-title text-center">Related Services</h2>
        <div class="related-grid">
          {relatedServices.map(related => (
            <article class="service-card card">
              {related.icon && (
                <div class="service-icon" set:html={related.icon} />
              )}
              <div class="service-content">
                <span class="service-category">{related.category}</span>
                <h3 class="service-title">
                  <a href={`/services/${related.slug}`}>{related.title}</a>
                </h3>
                <p class="service-tagline">{related.tagline}</p>
                <a href={`/services/${related.slug}`} class="service-link">
                  Learn More →
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA -->
  <section class="final-cta section">
    <div class="container container-6xl">
      <div class="cta-box card">
        <h2 class="cta-title">Ready to Get Started?</h2>
        <p class="cta-description">
          Book your {service.title.toLowerCase()} today and take the next step forward
        </p>
        <div class="cta-buttons">
          <a href={service.bookingUrl || '/contact'} class="btn btn-primary btn-lg">
            Book Now
          </a>
          <a href="/services" class="btn btn-outline btn-lg">
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Breadcrumbs */
  .breadcrumbs-section {
    padding: var(--space-lg) 0;
    background: var(--color-Neutral-50);
  }

  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    flex-wrap: wrap;
  }

  .breadcrumbs a {
    color: var(--color-Text-500);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .breadcrumbs a:hover {
    color: var(--color-Primary-500);
  }

  .breadcrumbs .separator {
    color: var(--color-Text-400);
  }

  .breadcrumbs .current {
    color: var(--color-Text-700);
    font-weight: var(--font-semibold);
  }

  /* Service Hero */
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .service-category {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: var(--color-Primary-100);
    color: var(--color-Primary-700);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-lg);
  }

  .service-title {
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-800);
    margin-bottom: var(--space-md);
    line-height: var(--leading-tight);
  }

  .service-tagline {
    font-size: var(--text-2xl);
    color: var(--color-Text-600);
    margin-bottom: var(--space-lg);
    line-height: var(--leading-relaxed);
  }

  .service-description {
    font-size: var(--text-lg);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-xl);
  }

  .service-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
    padding: var(--space-xl);
    background: var(--color-Neutral-50);
    border-radius: var(--radius-lg);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    color: var(--color-Text-700);
  }

  .meta-item svg {
    color: var(--color-Primary-500);
    flex-shrink: 0;
  }

  .hero-image {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  /* Features - .bg-alt uses global class from utilities.css */

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-3xl);
    color: var(--color-Text-800);
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  .feature-card {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
  }

  .feature-icon {
    width: 24px;
    height: 24px;
    color: var(--color-Primary-500);
    flex-shrink: 0;
  }

  .feature-text {
    margin: 0;
    color: var(--color-Text-700);
    font-size: var(--text-base);
  }

  /* Benefits */
  .benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  .benefit-item {
    display: flex;
    gap: var(--space-lg);
    align-items: flex-start;
  }

  .benefit-number {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-Primary-500);
    color: white;
    border-radius: var(--radius-lg);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    flex-shrink: 0;
  }

  .benefit-text {
    margin: 0;
    padding-top: var(--space-sm);
    color: var(--color-Text-700);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  /* Process */
  .process-timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    position: relative;
  }

  .process-step {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-xl);
  }

  .step-indicator {
    width: 56px;
    height: 56px;
    background: var(--color-Primary-500);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .step-number {
    color: white;
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
  }

  .step-content {
    padding: var(--space-xl);
  }

  .step-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-800);
    margin-bottom: var(--space-sm);
  }

  .step-description {
    margin: 0;
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
  }

  /* FAQs */
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .faq-item {
    padding: var(--space-xl);
    cursor: pointer;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-Text-800);
    cursor: pointer;
    user-select: none;
    list-style: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question svg {
    transition: transform var(--transition-fast);
    color: var(--color-Primary-500);
    flex-shrink: 0;
  }

  .faq-item[open] .faq-question svg {
    transform: rotate(180deg);
  }

  .faq-answer {
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-Neutral-200);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
  }

  /* Related Services */
  .related-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
  }

  .service-card {
    padding: var(--space-2xl);
    transition: all var(--transition-base);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .service-icon {
    width: 48px;
    height: 48px;
    color: var(--color-Primary-500);
    margin-bottom: var(--space-lg);
  }

  .service-card .service-category {
    font-size: var(--text-xs);
    margin-bottom: var(--space-sm);
  }

  .service-card .service-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-sm);
  }

  .service-card .service-title a {
    color: var(--color-Text-800);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .service-card .service-title a:hover {
    color: var(--color-Primary-500);
  }

  .service-card .service-tagline {
    font-size: var(--text-base);
    color: var(--color-Text-600);
    margin-bottom: var(--space-lg);
    line-height: var(--leading-relaxed);
  }

  .service-link {
    color: var(--color-Primary-500);
    text-decoration: none;
    font-weight: var(--font-semibold);
    transition: color var(--transition-fast);
  }

  .service-link:hover {
    color: var(--color-Primary-700);
  }

  /* Final CTA */
  .cta-box {
    padding: var(--space-3xl);
    text-align: center;
  }

  .cta-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-800);
  }

  .cta-description {
    font-size: var(--text-lg);
    color: var(--color-Text-600);
    margin-bottom: var(--space-2xl);
    line-height: var(--leading-relaxed);
  }

  .cta-box .cta-buttons {
    justify-content: center;
    align-items: center;
  }

  /* Responsive: Tablet */
  @media (min-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
    }

    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-buttons {
      flex-direction: row;
    }
  }

  /* Responsive: Desktop */
  @media (min-width: 1024px) {
    .service-title {
      font-size: var(--text-6xl);
    }

    .features-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .related-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .cta-title {
      font-size: var(--text-5xl);
    }
  }
</style>
