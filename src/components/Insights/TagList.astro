---
/**
 * TagList - Displays a list of tags for insights/blog posts
 * Uses Badge component with configurable styling
 */
import Badge from '../Badge/Badge.astro';

type BadgeShape = 'rounded' | 'pill' | 'square' | 'tag';
type BadgeVariant = 'fill' | 'outline' | 'soft' | 'ghost';

interface Props {
  tags: string[];
  shape?: BadgeShape;
  variant?: BadgeVariant;
  class?: string;
}

const {
  tags,
  shape = 'pill',
  variant = 'soft',
  class: className
} = Astro.props;

if (!tags || tags.length === 0) return null;
---

<footer class:list={['tag-list', className]}>
  <div class="container container-4xl">
    <div class="tag-list__tags">
      {tags.map(tag => (
        <Badge
          type="default"
          label={tag}
          shape={shape}
          variant={variant}
          size="md"
        />
      ))}
    </div>
  </div>
</footer>

<style>
  /* Layout */
  .tag-list__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  /* Box model */
  .tag-list {
    padding: var(--space-2xl) 0;
    border-top: 1px solid var(--color-Neutral-200);
  }

  /* Visual */
  .tag-list {
    background: var(--color-Background-100);
  }
</style>
