---
/**
 * VisualSection - Visual Settings Section
 *
 * Contains visual accessibility settings like text-only mode and link highlighting.
 *
 * Usage:
 * <VisualSection />
 */
import Toggle from './Toggle.astro';
---

<div class="a11y-section">
  <h3 class="a11y-section__title">Visual</h3>

  <Toggle
    id="a11y-text-only"
    setting="textOnly"
    label="Text Only Mode"
    description="Hide images and decorations"
  />

  <Toggle
    id="a11y-highlight-links"
    setting="highlightLinks"
    label="Highlight Links"
    description="Underline all links"
  />
</div>

<style>
  .a11y-section {
    padding: var(--space-md) 0;
    border-bottom: var(--border-width) solid var(--color-Border-100);
  }

  .a11y-section:last-child {
    border-bottom: none;
  }

  .a11y-section__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-Text-500);
    margin-bottom: var(--space-sm);
  }
</style>
