---
/**
 * NavigationSection - Navigation & Motion Settings Section
 *
 * Contains navigation and motion accessibility settings.
 *
 * Usage:
 * <NavigationSection />
 */
import Toggle from './Toggle.astro';
import Icon from '../Icons/Icon.astro';
---

<div class="a11y-section">
  <h3 class="a11y-section__title">Navigation & Motion</h3>

  <Toggle
    id="a11y-reduce-motion"
    setting="reduceMotion"
    label="Reduce Motion"
    description="Disable animations"
  />

  <Toggle
    id="a11y-enhanced-focus"
    setting="enhancedFocus"
    label="Enhanced Focus"
    description="Larger focus indicators"
  />

  <Toggle
    id="a11y-screen-reader"
    setting="screenReaderMode"
    label="Screen Reader Mode"
    description="Announce interactions"
  />

  <!-- PDF Download -->
  <div class="a11y-setting a11y-setting--pdf">
    <button class="btn btn-sm btn-primary" id="a11y-download-pdf" aria-label="Download page as PDF">
      <Icon name="a11y-panel/download-fill" size={18} />
      <span>Download PDF</span>
    </button>
  </div>
</div>

<style>
  .a11y-section {
    padding: var(--space-md) 0;
    border-bottom: var(--border-width) solid var(--color-Border-100);
  }

  .a11y-section:last-child {
    border-bottom: none;
  }

  .a11y-section__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-Text-500);
    margin-bottom: var(--space-sm);
  }

  .a11y-setting--pdf {
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: var(--border-width) solid var(--color-Border-100);
  }

  .a11y-setting--pdf .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }
</style>
