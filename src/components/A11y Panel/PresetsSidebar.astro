---
/**
 * PresetsSidebar - Quick Presets Sidebar
 *
 * Displays preset buttons for quick accessibility configurations.
 *
 * Usage:
 * <PresetsSidebar />
 */
import PresetButton from './PresetButton.astro';
---

<aside class="a11y-panel__sidebar-right">
  <h3 class="a11y-sidebar__title">Quick Presets</h3>
  <div class="a11y-preset-list">
    <PresetButton
      preset="dyslexia"
      icon="text-aa-fill"
      title="Dyslexia"
      subtitle="Font + spacing"
    />
    <PresetButton
      preset="low-vision"
      icon="eye-fill"
      title="Low Vision"
      subtitle="Large text"
    />
    <PresetButton
      preset="color-blind"
      icon="palette-fill"
      title="Color Blind"
      subtitle="Adapted colors"
    />
    <PresetButton
      preset="motor"
      icon="hand-palm-fill"
      title="Motor"
      subtitle="Enhanced focus"
    />
    <PresetButton
      preset="cognitive"
      icon="brain-fill"
      title="Cognitive"
      subtitle="Reduced motion"
    />
    <PresetButton
      preset="easyread"
      icon="book-open-fill"
      title="Easy Read"
      subtitle="Simple layout"
    />
  </div>
</aside>

<style>
  .a11y-panel__sidebar-right {
    flex-shrink: 0;
    width: 200px;
    padding: var(--space-md);
    background: var(--color-Background-100);
    border-left: var(--border-width) solid var(--color-Border-100);
    overflow-y: auto;
  }

  .a11y-sidebar__title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-Text-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .a11y-preset-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  @media (max-width: 768px) {
    .a11y-panel__sidebar-right {
      width: 100%;
      border-left: none;
      border-top: var(--border-width) solid var(--color-Border-100);
    }

    .a11y-preset-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
