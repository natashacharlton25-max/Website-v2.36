---
/**
 * ThemeSidebar - Color Theme Selection Sidebar
 *
 * Displays theme cards for accessibility color themes.
 * Theme cards are dynamically generated by ThemePreviewTokens.js.
 *
 * Usage:
 * <ThemeSidebar />
 */
---

<aside class="a11y-panel__sidebar">
  <h3 class="a11y-sidebar__title">Color Theme</h3>
  <!-- Theme cards are dynamically generated by ThemePreviewTokens.js -->
  <div class="a11y-theme-list"></div>
</aside>

<style>
  .a11y-panel__sidebar {
    padding: var(--space-md);
    border-right: var(--border-width) solid var(--color-Border-100);
    overflow-y: auto;
  }

  .a11y-sidebar__title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-Text-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .a11y-theme-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  @media (max-width: 768px) {
    .a11y-panel__sidebar {
      width: 100%;
      border-right: none;
      border-bottom: var(--border-width) solid var(--color-Border-100);
    }

    .a11y-theme-list {
      flex-direction: row;
      flex-wrap: wrap;
    }
  }
</style>
