---
/**
 * OfferingCard - Service offering card with image and details
 *
 * Used on services page to display service offerings with image, lists, and CTA
 *
 * Props:
 * @param title - Offering title
 * @param description - Offering description
 * @param image - Offering image (ImageMetadata)
 * @param suitable - Optional "Suitable for" list
 * @param areas - Optional "Resources cover areas including" list
 * @param includes - Optional "Includes" list
 * @param includesTitle - Optional title for includes section
 * @param cta - CTA button {text, href}
 */

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import Button from '../Button/Button.astro';

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  suitable?: string[];
  areas?: string[];
  includes?: string[];
  includesTitle?: string;
  cta: {
    text: string;
    href: string;
  };
}

const {
  title,
  description,
  image,
  suitable,
  areas,
  includes,
  includesTitle,
  cta
} = Astro.props;
---

<div class="offering-card">
  <Image
    src={image}
    alt={title}
    class="offering-card__image"
    loading="lazy"
  />

  <div class="offering-card__content">
    <h3 class="offering-card__title">{title}</h3>
    <p class="offering-card__description">{description}</p>

    {suitable && (
      <div class="offering-card__detail">
        <h4>Suitable for:</h4>
        <ul>
          {suitable.map(item => <li>{item}</li>)}
        </ul>
      </div>
    )}

    {areas && (
      <div class="offering-card__detail">
        <h4>Resources cover areas including:</h4>
        <ul>
          {areas.map(item => <li>{item}</li>)}
        </ul>
      </div>
    )}

    {includes && (
      <div class="offering-card__detail">
        <h4>{includesTitle || 'Includes:'}</h4>
        <ul>
          {includes.map(item => <li>{item}</li>)}
        </ul>
      </div>
    )}

    <div class="offering-card__cta">
      <Button
        href={cta.href}
        variant="primary"
        size="md"
      >
        {cta.text}
      </Button>
    </div>
  </div>
</div>

<style>
  /* ========== OFFERING CARD ========== */
  .offering-card {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: var(--space-3xl);
    align-items: start;
    margin-bottom: var(--space-4xl);
  }

  .offering-card:last-child {
    margin-bottom: 0;
  }

  /* ========== IMAGE ========== */
  .offering-card__image {
    width: 250px;
    height: 250px;
    border-radius: var(--border-radius-lg);
    object-fit: cover;
    box-shadow: var(--shadow-md);
  }

  /* ========== CONTENT ========== */
  .offering-card__title {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    margin: 0 0 var(--space-lg) 0;
  }

  .offering-card__description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-Text-600);
    margin: 0 0 var(--space-xl) 0;
    line-height: var(--leading-relaxed);
    max-width: 50%;
  }

  /* ========== DETAIL SECTIONS ========== */
  .offering-card__detail {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .offering-card__detail h4 {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 var(--space-md) 0;
  }

  .offering-card__detail ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .offering-card__detail ul li {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-Text-600);
    padding: var(--space-xs) 0 var(--space-xs) var(--space-lg);
    position: relative;
    line-height: var(--leading-normal);
  }

  .offering-card__detail ul li::before {
    content: '';
    position: absolute;
    left: var(--space-sm);
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--color-Primary-500);
  }

  /* ========== CTA ========== */
  .offering-card__cta {
    margin-top: var(--space-4xl);
  }

  /* ========== RESPONSIVE - TABLET ========== */
  @media (max-width: 968px) {
    .offering-card {
      grid-template-columns: 1fr;
    }

    .offering-card__image {
      width: 200px;
      height: 200px;
      margin: 0 auto;
    }

    .offering-card__description {
      max-width: 100%;
    }
  }

  /* A11Y theme overrides in: src/styles/a11y/components/offering-card.css */
</style>
