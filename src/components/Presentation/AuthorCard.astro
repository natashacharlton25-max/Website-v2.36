---
/**
 * AuthorCard - Displays author info with photo, name, role, and bio
 * Reusable across presentations, insights, and other content types
 */
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  photo: ImageMetadata;
  role?: string;
  bio: string;
  label?: string;
  variant?: 'default' | 'compact' | 'featured';
  class?: string;
}

const {
  name,
  photo,
  role,
  bio,
  label = 'Written by',
  variant = 'default',
  class: className
} = Astro.props;
---

<div class:list={['author-card', `author-card--${variant}`, className]}>
  <div class="author-card__photo">
    <Image src={photo} alt={name} width={100} height={100} />
  </div>
  <div class="author-card__info">
    <span class="author-card__label">{label}</span>
    <h3 class="author-card__name">{name}</h3>
    {role && <span class="author-card__role">{role}</span>}
    <p class="author-card__bio">{bio}</p>
  </div>
</div>

<style>
  /* Layout */
  .author-card {
    display: flex;
    gap: var(--space-xl);
    align-items: center;
  }

  /* Box model */
  .author-card {
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
  }

  /* Visual */
  .author-card {
    background: var(--color-Neutral-50);
    box-shadow: var(--shadow);
  }

  /* Elements */
  .author-card__photo {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    border-radius: var(--radius-full);
    overflow: hidden;
  }

  .author-card__photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .author-card__info {
    flex: 1;
  }

  .author-card__label {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-Text-400);
  }

  .author-card__name {
    margin: var(--space-xs) 0;
    /* Typography inherited from h3 */
  }

  .author-card__role {
    display: block;
    margin-bottom: var(--space-sm);
    color: var(--color-Primary-600);
  }

  .author-card__bio {
    margin: 0;
    /* Typography inherited from p */
  }

  /* Modifiers */
  .author-card--compact {
    padding: var(--space-lg);
    gap: var(--space-md);
  }

  .author-card--compact .author-card__photo {
    width: 60px;
    height: 60px;
  }

  .author-card--featured {
    max-width: 600px;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .author-card {
      flex-direction: column;
      text-align: center;
    }

    .author-card__photo {
      width: 80px;
      height: 80px;
    }
  }
</style>
