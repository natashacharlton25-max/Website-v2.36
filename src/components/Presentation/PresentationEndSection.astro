---
/**
 * PresentationEndSection - End section for presentations
 * Displays author, linked assets, and recommended content
 * Now uses unified RelatedGrid component
 */
import AuthorCard from './AuthorCard.astro';
import RelatedGrid from '../Grids/RelatedGrid.astro';
import type { ImageMetadata } from 'astro';

interface Author {
  name: string;
  photo: ImageMetadata;
  role?: string;
  bio: string;
}

interface LinkedAsset {
  title: string;
  description?: string;
  url: string;
  type?: string;
}

interface RecommendedItem {
  slug: string;
  title: string;
  category: string;
  image: ImageMetadata;
}

interface Props {
  author?: Author;
  linkedAssets?: LinkedAsset[];
  recommendedItems?: RecommendedItem[];
  recommendedBasePath?: string;
  customHtml?: string;
  class?: string;
}

const {
  author,
  linkedAssets,
  recommendedItems,
  recommendedBasePath = '/presentations',
  customHtml,
  class: className
} = Astro.props;

const hasContent = author || linkedAssets?.length || recommendedItems?.length || customHtml;
if (!hasContent) return null;

// Format linked assets for RelatedGrid
const formattedResources = linkedAssets?.map(asset => ({
  title: asset.title,
  description: asset.description,
  url: asset.url,
  type: asset.type || 'Resource'
})) || [];

// Format recommended items for RelatedGrid (using image as cardImage)
const formattedRecommended = recommendedItems?.map(item => ({
  slug: item.slug,
  title: item.title,
  category: item.category,
  cardImage: item.image
})) || [];
---

<section class:list={['presentation-end', className]} id="end">
  {author && (
    <AuthorCard
      name={author.name}
      photo={author.photo}
      role={author.role}
      bio={author.bio}
      variant="featured"
    />
  )}

  {formattedResources.length > 0 && (
    <div class="presentation-end__resources">
      <RelatedGrid
        items={formattedResources}
        contentType="resources"
        title="Related Resources"
        cardStyle="minimal"
        background="none"
        containerSize="4xl"
      />
    </div>
  )}

  {formattedRecommended.length > 0 && (
    <div class="presentation-end__recommended">
      <RelatedGrid
        items={formattedRecommended}
        contentType="posts"
        title="Continue Reading"
        basePath={recommendedBasePath}
        cardStyle="vertical"
        background="none"
        containerSize="6xl"
      />
    </div>
  )}

  {customHtml && (
    <div class="presentation-end__custom" set:html={customHtml} />
  )}
</section>

<style>
  /* Layout */
  .presentation-end {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  }

  /* Box model */
  .presentation-end {
    padding: var(--space-4xl) var(--space-xl);
    gap: var(--space-4xl);
  }

  /* Visual */
  .presentation-end {
    background: var(--color-Background-100);
  }

  /* Elements */
  .presentation-end__custom {
    width: 100%;
    max-width: 800px;
  }
</style>
