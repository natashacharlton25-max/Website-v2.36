---
/**
 * ProcessSection - Reusable process/steps section component
 *
 * Props:
 * - title: Section heading
 * - description?: Section description
 * - steps: Array of {number, title, description}
 * - image?: Optional process image
 * - imagePosition?: 'left' | 'right'
 * - bgClass?: Background class
 */

export interface Step {
  number: string;
  title: string;
  description: string;
}

export interface Props {
  title: string;
  description?: string;
  steps: Step[];
  image?: string;
  imagePosition?: 'left' | 'right';
  bgClass?: string;
}

const {
  title,
  description,
  steps,
  image,
  imagePosition = 'right',
  bgClass = ''
} = Astro.props;
---

<section class={`process-section section ${bgClass}`}>
  <div class="container container-7xl">
    <div class="section-header text-center">
      <h2 class="section-title">{title}</h2>
      {description && <p class="section-description">{description}</p>}
    </div>

    <div class={`process-content ${imagePosition === 'left' ? 'reverse' : ''}`}>
      <!-- Steps -->
      <div class="process-steps">
        {steps.map(step => (
          <div class="process-step">
            <div class="step-number">{step.number}</div>
            <div class="step-content">
              <h3 class="step-title">{step.title}</h3>
              <p class="step-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>

      <!-- Optional Process Image -->
      {image && (
        <div class="process-image">
          <img src={image} alt={title} />
        </div>
      )}
    </div>

    <slot />
  </div>
</section>

<style>
  .process-section {
    padding: var(--space-3xl) 0;
  }

  .section-header {
    margin-bottom: var(--space-3xl);
    text-align: center;
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-Text-500);
    max-width: 700px;
    margin: 0 auto;
  }

  .process-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
    margin-top: var(--space-3xl);
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .process-step {
    display: flex;
    gap: var(--space-lg);
  }

  .step-number {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--color-Primary-500), var(--color-Primary-700));
    color: white;
    border-radius: var(--border-radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    box-shadow: var(--shadow-md);
  }

  .step-content {
    flex: 1;
  }

  .step-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-sm);
    color: var(--color-Text-700);
  }

  .step-description {
    color: var(--color-Text-500);
    line-height: var(--leading-relaxed);
  }

  .process-image {
    width: 100%;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .process-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (min-width: 768px) {
    .process-content {
      flex-direction: row;
      align-items: center;
    }

    .process-content.reverse {
      flex-direction: row-reverse;
    }

    .process-steps {
      flex: 1;
    }

    .process-image {
      flex: 1;
    }

    .section-title {
      font-size: var(--text-5xl);
    }
  }
</style>
