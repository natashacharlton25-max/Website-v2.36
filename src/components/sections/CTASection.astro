---
/**
 * CTASection - Reusable call-to-action section component
 *
 * Props:
 * - title: CTA heading
 * - description?: CTA description/body text
 * - buttons: Array of {text, href, variant}
 * - trustSignals?: Array of {icon, value, label}
 * - bgClass?: Background class
 */

import Button from '../Button/Button.astro';

export interface CTAButton {
  text: string;
  href: string;
  variant?: 'primary' | 'outline' | 'secondary';
}

export interface TrustSignal {
  icon: string; // SVG string
  value: string;
  label: string;
}

export interface Props {
  title: string;
  description?: string | string[];
  buttons: CTAButton[];
  trustSignals?: TrustSignal[];
  bgClass?: string;
}

const {
  title,
  description,
  buttons,
  trustSignals = [],
  bgClass = 'bg-alt'
} = Astro.props;

const descriptionArray = Array.isArray(description) ? description : description ? [description] : [];
---

<section class={`cta-section section ${bgClass}`}>
  <div class="container container-6xl">
    <div class="cta-content">
      <h2 class="cta-heading">{title}</h2>

      {descriptionArray.length > 0 && (
        <div class="cta-body">
          {descriptionArray.map(text => (
            <p>{text}</p>
          ))}
        </div>
      )}

      <slot />

      <div class="cta-buttons">
        {buttons.map(button => (
          <Button
            href={button.href}
            variant={button.variant === 'outline' ? 'secondary' : button.variant || 'primary'}
          >
            {button.text}
          </Button>
        ))}
      </div>

      {trustSignals.length > 0 && (
        <div class="trust-signals">
          {trustSignals.map(signal => (
            <div class="trust-signal">
              <div class="trust-icon" set:html={signal.icon}></div>
              <div class="trust-text">
                <strong>{signal.value}</strong>
                <span>{signal.label}</span>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--space-5xl) 0;
  }

  .cta-content {
    text-align: center;
    padding: var(--space-3xl) var(--space-lg);
  }

  .cta-heading {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-2xl);
    color: var(--color-Text-700);
    font-family: var(--font-heading);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .cta-body {
    max-width: 800px;
    margin: 0 auto var(--space-3xl);
  }

  .cta-body p {
    font-size: var(--text-lg);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-lg);
    font-family: var(--font-body);
    font-weight: var(--font-medium);
  }

  .cta-body p:last-child {
    margin-bottom: 0;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: center;
    margin-bottom: var(--space-3xl);
  }

  .trust-signals {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-Neutral-200);
  }

  .trust-signal {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    justify-content: center;
  }

  .trust-icon {
    color: var(--color-Primary-500);
    flex-shrink: 0;
  }

  .trust-text {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .trust-text strong {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
  }

  .trust-text span {
    font-size: var(--text-sm);
    color: var(--color-Text-500);
  }

  @media (max-width: 767px) {
    .cta-section {
      padding: var(--space-3xl) 0;
    }
  }

  @media (min-width: 768px) {
    .cta-buttons {
      flex-direction: row;
      justify-content: center;
    }

    .trust-signals {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cta-heading {
      font-size: var(--text-5xl);
    }
  }

  @media (max-width: 250px) {
    .cta-section {
      padding: var(--space-2xl) 0.25rem;
    }

    .cta-content {
      padding: var(--space-lg) 0.5rem;
    }

    .cta-heading {
      font-size: var(--text-lg);
      margin-bottom: var(--space-md);
      line-height: 1.3;
    }

    .cta-body p {
      font-size: var(--text-sm);
      line-height: 1.5;
      margin-bottom: var(--space-sm);
    }

    .cta-buttons {
      margin-bottom: var(--space-lg);
    }

    .trust-signal {
      flex-direction: column;
      text-align: center;
      gap: var(--space-sm);
    }

    .trust-text strong {
      font-size: var(--text-sm);
    }

    .trust-text span {
      font-size: var(--text-xs);
    }
  }

  /* Extra small screens - under 210px */
  @media (max-width: 210px) {
    .cta-section {
      padding: var(--space-lg) 0.125rem;
    }

    .cta-content {
      padding: var(--space-md) 0.25rem;
    }

    .cta-heading {
      font-size: var(--text-base);
    }

    .cta-body p {
      font-size: var(--text-xs);
    }

    .trust-text strong {
      font-size: var(--text-xs);
    }

    .trust-text span {
      font-size: var(--text-xs);
    }
  }
</style>
