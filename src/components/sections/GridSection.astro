---
/**
 * GridSection - Reusable grid section for cards/items
 *
 * Props:
 * - title: Section heading
 * - description?: Section description
 * - items: Array of grid items with {icon?, title, description}
 * - columns?: Number of columns (2, 3, or 4)
 * - bgClass?: Background class
 * - centered?: Center the header text
 */

export interface GridItem {
  icon?: string; // SVG string or slot name
  title: string;
  description: string;
}

export interface Props {
  title: string;
  description?: string;
  items?: GridItem[];
  columns?: 2 | 3 | 4;
  bgClass?: string;
  centered?: boolean;
}

const {
  title,
  description,
  items = [],
  columns = 3,
  bgClass = '',
  centered = true
} = Astro.props;

const gridClass = `grid-${columns}-cols`;
---

<section class={`grid-section section ${bgClass}`}>
  <div class="container container-7xl">
    <div class={`section-header ${centered ? 'text-center' : ''}`}>
      <h2 class="section-title">{title}</h2>
      {description && <p class="section-description">{description}</p>}
    </div>

    <div class={`grid ${gridClass}`}>
      {items.map(item => (
        <div class="grid-card card">
          {item.icon && (
            <div class="card-icon" set:html={item.icon}></div>
          )}
          <h3 class="card-title">{item.title}</h3>
          <p class="card-description">{item.description}</p>
        </div>
      ))}

      <slot />
    </div>
  </div>
</section>

<style>
  .grid-section {
    padding: var(--space-3xl) 0;
  }

  .section-header {
    margin-bottom: var(--space-3xl);
  }

  .section-header.text-center {
    text-align: center;
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-Text-500);
    max-width: 700px;
    margin: 0 auto;
  }

  .grid {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: 1fr;
  }

  .grid-card {
    text-align: center;
    padding: var(--space-2xl);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .grid-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .card-icon {
    color: var(--color-Primary-500);
    margin-bottom: var(--space-lg);
    display: flex;
    justify-content: center;
  }

  .card-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .card-description {
    color: var(--color-Text-500);
    line-height: var(--leading-relaxed);
    font-size: var(--text-base);
  }

  @media (min-width: 768px) {
    .grid.grid-2-cols {
      grid-template-columns: repeat(2, 1fr);
    }

    .grid.grid-3-cols {
      grid-template-columns: repeat(3, 1fr);
    }

    .grid.grid-4-cols {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .grid.grid-4-cols {
      grid-template-columns: repeat(4, 1fr);
    }

    .section-title {
      font-size: var(--text-5xl);
    }
  }
</style>
