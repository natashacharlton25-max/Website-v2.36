---
/**
 * ServicesGridSection - Reusable services/features grid section
 *
 * Props:
 * - title: Section heading
 * - description?: Section description
 * - services: Array of {icon, title, description, link?}
 * - ctaText?: Bottom CTA button text
 * - ctaHref?: Bottom CTA button link
 * - bgClass?: Background class
 */

export interface Service {
  icon: string; // SVG string
  title: string;
  description: string;
  link?: string;
  linkText?: string;
}

export interface Props {
  title: string;
  description?: string;
  services: Service[];
  ctaText?: string;
  ctaHref?: string;
  bgClass?: string;
}

const {
  title,
  description,
  services,
  ctaText,
  ctaHref,
  bgClass = ''
} = Astro.props;
---

<section class={`services-grid-section section ${bgClass}`}>
  <div class="container container-7xl">
    <div class="section-header text-center">
      <h2 class="section-title">{title}</h2>
      {description && <p class="section-description">{description}</p>}
    </div>

    <div class="services-grid">
      {services.map(service => (
        <div class="service-card card">
          <div class="service-icon" set:html={service.icon}></div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          {service.link && (
            <a href={service.link} class="service-link">
              {service.linkText || 'Learn More'} â†’
            </a>
          )}
        </div>
      ))}
    </div>

    {ctaText && ctaHref && (
      <div class="text-center" style="margin-top: var(--space-3xl);">
        <a href={ctaHref} class="btn btn-outline btn-lg">{ctaText}</a>
      </div>
    )}

    <slot />
  </div>
</section>

<style>
  .section-header {
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-Text-500);
    max-width: 700px;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    margin-top: var(--space-3xl);
  }

  .service-card {
    padding: var(--space-2xl);
    text-align: center;
    transition: all var(--transition-base);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }

  .service-icon {
    color: var(--color-Primary-500);
    margin-bottom: var(--space-lg);
    display: flex;
    justify-content: center;
  }

  .service-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .service-description {
    color: var(--color-Text-500);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-lg);
  }

  .service-link {
    color: var(--color-Primary-500);
    font-weight: var(--font-semibold);
    transition: color var(--transition-fast);
    display: inline-block;
  }

  .service-link:hover {
    color: var(--color-Primary-700);
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .section-title {
      font-size: var(--text-5xl);
    }
  }
</style>
