---
/**
 * HeroSection - Unified hero section component
 *
 * Variants:
 * - simple: Plain background with text content (insights, services, projects, assets)
 * - image: Background image with overlay (about)
 * - gradient: Gradient background using theme tokens
 *
 * Props:
 * @param title - Main heading (required)
 * @param subtitle - Subheading text
 * @param description - Supporting paragraph text
 * @param extraText - Additional paragraph (for longer intros)
 * @param image - Background image for 'image' variant (use Astro Image import)
 * @param imageAlt - Alt text for background image
 * @param imagePosition - 'full' | 'left' | 'right' for image variant (default: 'full')
 * @param variant - 'simple' | 'image' | 'gradient' (default: 'simple')
 * @param gradient - Gradient token name for 'gradient' variant (default: 'hero')
 * @param alignment - 'left' | 'center' (default: 'left')
 * @param containerSize - Container width: '6xl' | '7xl' | 'full' (default: '6xl')
 * @param buttons - Array of CTA buttons [{text, href, variant}]
 * @param overlayOpacity - Overlay opacity for image variant (default: 0.6)
 */
import { Image } from 'astro:assets';
import Button from '../Button/Button.astro';

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  extraText?: string;
  image?: ImageMetadata;
  imageAlt?: string;
  imagePosition?: 'full' | 'left' | 'right';
  variant?: 'simple' | 'image' | 'gradient';
  gradient?: 'hero' | 'primary' | 'primary-soft' | 'primary-light' | 'secondary' | 'secondary-soft' | 'accent1' | 'accent2';
  alignment?: 'left' | 'center';
  containerSize?: '6xl' | '7xl' | 'full';
  buttons?: Array<{
    text: string;
    href: string;
    variant?: 'primary' | 'secondary' | 'outline';
  }>;
  overlayOpacity?: number;
}

const {
  title,
  subtitle,
  description,
  extraText,
  image,
  imageAlt = '',
  imagePosition = 'full',
  variant = 'simple',
  gradient = 'hero',
  alignment = 'left',
  containerSize = '6xl',
  buttons = [],
  overlayOpacity = 0.6,
} = Astro.props;

const containerClass = `container container-${containerSize}`;
const alignmentClass = alignment === 'center' ? 'hero-section--centered' : '';
---

{variant === 'image' && image && imagePosition === 'full' ? (
  <!-- Image Variant: Full-width background image with overlay -->
  <section class={`hero-section hero-section--image ${alignmentClass}`}>
    <div class="hero-section__image-wrapper">
      <Image src={image} alt={imageAlt} class="hero-section__image" />
      <div class="hero-section__overlay" style={`--overlay-opacity: ${overlayOpacity}`}></div>
      <div class="hero-section__fade"></div>
      <div class={containerClass}>
        <div class="hero-section__content">
          <h1 class="hero-section__title">{title}</h1>
          {subtitle && <p class="hero-section__subtitle">{subtitle}</p>}
          {description && <p class="hero-section__description">{description}</p>}
          {extraText && <p class="hero-section__extra">{extraText}</p>}
          {buttons.length > 0 && (
            <div class="hero-section__buttons">
              {buttons.map(button => (
                <Button href={button.href} variant={button.variant || 'primary'}>
                  {button.text}
                </Button>
              ))}
            </div>
          )}
          <slot />
        </div>
      </div>
    </div>
  </section>
) : variant === 'image' && image && (imagePosition === 'left' || imagePosition === 'right') ? (
  <!-- Image Variant: Split layout with image on left or right -->
  <section class={`hero-section hero-section--image-split hero-section--image-${imagePosition}`}>
    <div class={containerClass}>
      <div class="hero-section__split-wrapper">
        <div class="hero-section__split-image">
          <Image src={image} alt={imageAlt} class="hero-section__image" />
        </div>
        <div class="hero-section__split-content">
          <h1 class="hero-section__title">{title}</h1>
          {subtitle && <p class="hero-section__subtitle">{subtitle}</p>}
          {description && <p class="hero-section__description">{description}</p>}
          {extraText && <p class="hero-section__extra">{extraText}</p>}
          {buttons.length > 0 && (
            <div class="hero-section__buttons">
              {buttons.map(button => (
                <Button href={button.href} variant={button.variant || 'primary'}>
                  {button.text}
                </Button>
              ))}
            </div>
          )}
          <slot />
        </div>
      </div>
    </div>
  </section>
) : variant === 'gradient' ? (
  <!-- Gradient Variant: Gradient background -->
  <section
    class={`hero-section hero-section--gradient hero-section--gradient-${gradient} ${alignmentClass}`}
  >
    <div class={containerClass}>
      <div class="hero-section__content">
        <h1 class="hero-section__title">{title}</h1>
        {subtitle && <p class="hero-section__subtitle">{subtitle}</p>}
        {description && <p class="hero-section__description">{description}</p>}
        {extraText && <p class="hero-section__extra">{extraText}</p>}
        {buttons.length > 0 && (
          <div class="hero-section__buttons">
            {buttons.map(button => (
              <Button href={button.href} variant={button.variant || 'primary'}>
                {button.text}
              </Button>
            ))}
          </div>
        )}
        <slot />
      </div>
    </div>
  </section>
) : (
  <!-- Simple Variant: Plain background -->
  <section class={`hero-section hero-section--simple ${alignmentClass}`}>
    <div class={containerClass}>
      <div class="hero-section__content">
        <h1 class="hero-section__title">{title}</h1>
        {subtitle && <p class="hero-section__subtitle">{subtitle}</p>}
        {description && <p class="hero-section__description">{description}</p>}
        {extraText && <p class="hero-section__extra">{extraText}</p>}
        {buttons.length > 0 && (
          <div class="hero-section__buttons">
            {buttons.map(button => (
              <Button href={button.href} variant={button.variant || 'primary'}>
                {button.text}
              </Button>
            ))}
          </div>
        )}
        <slot />
      </div>
    </div>
  </section>
)}

