---
/**
 * TeamSection - Reusable team members display section
 *
 * Props:
 * - title: Section heading
 * - description?: Section description
 * - teamMembers: Array of {name, role, bio, image, social: {linkedin?, twitter?}}
 * - bgClass?: Background class
 */

export interface SocialLinks {
  linkedin?: string;
  twitter?: string;
  github?: string;
}

export interface TeamMember {
  name: string;
  role: string;
  bio: string;
  image: string;
  social?: SocialLinks;
}

export interface Props {
  title: string;
  description?: string;
  teamMembers: TeamMember[];
  bgClass?: string;
}

const {
  title,
  description,
  teamMembers,
  bgClass = 'bg-alt'
} = Astro.props;
---

<section class={`team-section section ${bgClass}`}>
  <div class="container container-7xl">
    <div class="team-header text-center">
      <h2 class="section-title">{title}</h2>
      {description && <p class="section-description">{description}</p>}
    </div>

    <div class="team-grid">
      {teamMembers.map(member => (
        <div class="team-member">
          <div class="team-member-image">
            <img src={member.image} alt={member.name} />
          </div>
          <div class="team-member-info">
            <h3 class="team-member-name">{member.name}</h3>
            <p class="team-member-role">{member.role}</p>
            <p class="team-member-bio">{member.bio}</p>

            {member.social && (
              <div class="team-member-social">
                {member.social.linkedin && (
                  <a href={member.social.linkedin} aria-label="LinkedIn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
                      <circle cx="4" cy="4" r="2"/>
                    </svg>
                  </a>
                )}
                {member.social.twitter && (
                  <a href={member.social.twitter} aria-label="Twitter">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                    </svg>
                  </a>
                )}
                {member.social.github && (
                  <a href={member.social.github} aria-label="GitHub">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
                    </svg>
                  </a>
                )}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <slot />
  </div>
</section>

<style>
  .team-header {
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-Text-500);
    max-width: 700px;
    margin: 0 auto;
  }

  .team-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
    margin-top: var(--space-3xl);
  }

  .team-member {
    text-align: center;
  }

  .team-member-image {
    width: 200px;
    height: 200px;
    border-radius: var(--border-radius-full);
    overflow: hidden;
    margin: 0 auto var(--space-lg);
    border: 4px solid var(--color-Primary-500);
  }

  .team-member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-member-name {
    font-size: var(--text-xl);
    margin-bottom: var(--space-xs);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
  }

  .team-member-role {
    color: var(--color-Primary-500);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-md);
  }

  .team-member-bio {
    color: var(--color-Text-500);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-md);
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
  }

  .team-member-social {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
  }

  .team-member-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--border-radius-full);
    background: var(--color-Neutral-100);
    color: var(--color-Neutral-600);
    transition: all var(--transition-base);
  }

  .team-member-social a:hover {
    background: var(--color-Primary-500);
    color: white;
  }

  @media (min-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .section-title {
      font-size: var(--text-5xl);
    }
  }
</style>
