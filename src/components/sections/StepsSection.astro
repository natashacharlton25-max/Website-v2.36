---
/**
 * StepsSection - Reusable step-by-step process section
 *
 * Props:
 * - title: Section heading
 * - description?: Section description
 * - steps: Array of {number, title, description}
 * - image?: Optional image URL to display alongside steps
 * - imagePosition?: 'left' | 'right' (default: 'right')
 * - bgClass?: Background class
 */

export interface Step {
  number: string;
  title: string;
  description: string;
}

export interface Props {
  title: string;
  description?: string;
  steps: Step[];
  image?: string;
  imagePosition?: 'left' | 'right';
  bgClass?: string;
}

const {
  title,
  description,
  steps,
  image,
  imagePosition = 'right',
  bgClass = ''
} = Astro.props;
---

<section class={`steps-section section ${bgClass}`}>
  <div class="container container-7xl">
    <div class="section-header text-center">
      <h2 class="section-title">{title}</h2>
      {description && <p class="section-description">{description}</p>}
    </div>

    <div class={`steps-content ${imagePosition === 'left' ? 'image-left' : ''}`}>
      {image && imagePosition === 'left' && (
        <div class="steps-image">
          <img src={image} alt={title} />
        </div>
      )}

      <div class="steps-list">
        {steps.map(step => (
          <div class="step-item">
            <div class="step-number">{step.number}</div>
            <div class="step-content">
              <h3 class="step-title">{step.title}</h3>
              <p class="step-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>

      {image && imagePosition === 'right' && (
        <div class="steps-image">
          <img src={image} alt={title} />
        </div>
      )}
    </div>

    <slot />
  </div>
</section>

<style>
  .section-header {
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--color-Text-700);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--color-Text-500);
    max-width: 700px;
    margin: 0 auto;
  }

  .steps-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
    margin-top: var(--space-3xl);
  }

  .steps-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .step-item {
    display: flex;
    gap: var(--space-lg);
  }

  .step-number {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--color-Primary-500), var(--color-Primary-700));
    color: white;
    border-radius: var(--border-radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    box-shadow: var(--shadow-md);
  }

  .step-content {
    flex: 1;
  }

  .step-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-sm);
    color: var(--color-Text-700);
  }

  .step-description {
    color: var(--color-Text-500);
    line-height: var(--leading-relaxed);
  }

  .steps-image {
    width: 100%;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .steps-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (min-width: 768px) {
    .steps-content {
      flex-direction: row;
      align-items: center;
    }

    .steps-content.image-left {
      flex-direction: row-reverse;
    }

    .steps-list {
      flex: 1;
    }

    .steps-image {
      flex: 1;
    }
  }

  @media (min-width: 1024px) {
    .section-title {
      font-size: var(--text-5xl);
    }
  }
</style>
