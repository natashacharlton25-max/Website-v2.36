---
import { BRAND_CONFIG } from '../../functions/brand';
import { LOGOS } from '../../functions/placeholderImages';
---

<footer class="footer">
  <div class="footer-container container container-full">
    <!-- Footer Top -->
    <div class="footer-top">
      <!-- Column 1: Brand -->
      <div class="footer-column">
        <div class="footer-brand">
          <img src={LOGOS.logo2} alt="Brand Logo" width="120" height="40" />
        </div>
        <p class="footer-description">
          {BRAND_CONFIG.description}
        </p>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-links">
        <a href="/legal/terms" class="footer-link-btn">Legal</a>
        <a href="/contact" class="footer-link-btn">Contact Us</a>
        <a href="/legal/cookies" class="footer-link-btn">Cookie Settings</a>
      </div>
      <p class="footer-copyright">
        Â© {new Date().getFullYear()} <strong>Walking With A Smile</strong>. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-BackgroundDark-900);
    color: var(--color-Text-50);
    padding: var(--space-3xl) 0 var(--space-xl);
  }

  .footer-top {
    display: flex;
    justify-content: center;
    margin-bottom: var(--space-3xl);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 600px;
  }

  .footer-brand {
    margin-bottom: var(--space-lg);
  }

  .footer-brand img {
    filter: brightness(0) invert(1); /* Makes logo white */
  }

  .footer-description {
    color: var(--color-Text-400);
    line-height: var(--leading-relaxed);
    margin-bottom: 0;
  }

  .footer-bottom {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-BackgroundDark-800);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    text-align: center;
  }

  .footer-copyright {
    color: var(--color-Text-500);
    font-size: var(--text-sm);
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-lg);
  }

  .footer-link-btn {
    background: var(--color-Primary-500);
    border: 2px solid var(--color-Primary-600);
    color: white;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    cursor: pointer;
    padding: var(--space-sm) var(--space-xl);
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-fast);
    text-decoration: none;
    display: inline-block;
  }

  .footer-link-btn:hover {
    background: var(--color-Primary-600);
    color: white;
    border-color: var(--color-Primary-700);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  /* Mobile responsive - under 768px */
  @media (max-width: 767px) {
    .footer {
      padding: var(--space-2xl) 0 var(--space-lg);
    }

    .footer-top {
      gap: var(--space-xl);
      margin-bottom: var(--space-2xl);
    }

    .footer-description {
      font-size: var(--text-sm);
      line-height: var(--leading-normal);
      margin-bottom: var(--space-md);
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .footer-title {
      font-size: var(--text-base);
      margin-bottom: var(--space-md);
    }

    .footer-links {
      gap: var(--space-xs);
    }

    .footer-links a {
      font-size: var(--text-sm);
    }

    .footer-social {
      gap: var(--space-sm);
    }

    .social-link {
      width: 36px;
      height: 36px;
    }

    .footer-bottom {
      padding-top: var(--space-md);
      gap: var(--space-sm);
    }

    .footer-copyright {
      font-size: var(--text-xs);
    }

    .footer-link-btn {
      font-size: var(--text-xs);
    }
  }

  /* Extra small screens - under 400px */
  @media (max-width: 400px) {
    .footer {
      padding: var(--space-xl) 0 var(--space-md);
    }

    .footer-top {
      gap: var(--space-lg);
      margin-bottom: var(--space-lg);
    }

    .footer-column {
      padding: 0 var(--space-sm);
    }

    .footer-description {
      -webkit-line-clamp: 2;
      margin-bottom: var(--space-sm);
    }

    .footer-title {
      font-size: var(--text-sm);
      margin-bottom: var(--space-sm);
    }

    .footer-links {
      gap: 0.25rem;
    }

    .footer-links a {
      font-size: var(--text-xs);
    }

    .social-link {
      width: 32px;
      height: 32px;
    }

    .footer-bottom {
      padding-top: var(--space-sm);
    }
  }

  /* Tiny screens - under 250px */
  @media (max-width: 250px) {
    .footer {
      padding: var(--space-lg) 0 var(--space-sm);
    }

    .footer-top {
      gap: var(--space-md);
      margin-bottom: var(--space-md);
    }

    .footer-column {
      padding: 0 var(--space-xs);
    }

    .footer-brand img {
      max-width: 80px;
      height: auto;
    }

    .footer-description {
      -webkit-line-clamp: 2;
      font-size: 0.7rem;
      margin-bottom: var(--space-xs);
    }

    .footer-title {
      font-size: 0.75rem;
      margin-bottom: var(--space-xs);
    }

    .footer-links {
      gap: 0.125rem;
    }

    .footer-links a {
      font-size: 0.7rem;
    }

    .social-link {
      width: 28px;
      height: 28px;
    }

    .footer-bottom {
      gap: 0.25rem;
    }

    .footer-copyright {
      font-size: 0.65rem;
      line-height: 1.3;
    }

    .footer-link-btn {
      font-size: 0.65rem;
    }
  }
</style>

<script>
  // Cookie settings button
  const cookieSettingsBtn = document.getElementById('cookieSettings');
  cookieSettingsBtn?.addEventListener('click', () => {
    // Trigger cookie banner to reappear
    const cookieBanner = document.getElementById('cookieBanner');
    if (cookieBanner) {
      cookieBanner.style.display = 'block';
    }
  });
</script>
