            'scoobysnax-primary' | 'scoobysnax-secondary' | 'scoobysnax-accent1' | 'scoobysnax-accent2' | 'scoobysnax-accent3' | 'scoobysnax-accent4' | 'scoobysnax-accent5' |
            'rocknroll-primary' | 'rocknroll-secondary' | 'rocknroll-accent1' | 'rocknroll-accent2' | 'rocknroll-accent3' | 'rocknroll-accent4' | 'rocknroll-accent5' |
            'onaroll-primary' | 'onaroll-secondary' | 'onaroll-accent1' | 'onaroll-accent2' | 'onaroll-accent3' | 'onaroll-accent4' | 'onaroll-accent5' |
            'spinmaster-primary' | 'spinmaster-secondary' | 'spinmaster-accent1' | 'spinmaster-accent2' | 'spinmaster-accent3' | 'spinmaster-accent4' | 'spinmaster-accent5' |
            'flipside-primary' | 'flipside-secondary' | 'flipside-accent1' | 'flipside-accent2' | 'flipside-accent3' | 'flipside-accent4' | 'flipside-accent5' |
            'spinside-primary' | 'spinside-secondary' | 'spinside-accent1' | 'spinside-accent2' | 'spinside-accent3' | 'spinside-accent4' | 'spinside-accent5' |
            'cheesenham-primary' | 'cheesenham-secondary' | 'cheesenham-accent1' | 'cheesenham-accent2' | 'cheesenham-accent3' | 'cheesenham-accent4' | 'cheesenham-accent5' |
            'eastside-primary' | 'eastside-secondary' | 'eastside-accent1' | 'eastside-accent2' | 'eastside-accent3' | 'eastside-accent4' | 'eastside-accent5';
}

const {
  href = 'https://example.com',
  frontLabel = 'Click to Explore',
  topLabel = 'Great choice! Let\'s go',
  variant = 'primary'
} = Astro.props;
---

<div class="rbc-scene">
  {variant?.startsWith('eastside-') ? (
    <a class={`east-3d east-3d--${variant}`} data-label={frontLabel} href={href} target="_blank" rel="noopener noreferrer">
    </a>
  ) : variant?.startsWith('cheesenham-') ? (
    <a class={`cheese-3d cheese-3d--${variant}`} data-label={frontLabel} href={href} target="_blank" rel="noopener noreferrer">
    </a>
  ) : variant?.startsWith('spinside-') ? (
    <a class={`spin-3d spin-3d--${variant}`} data-label={frontLabel} href={href} target="_blank" rel="noopener noreferrer">
    </a>
  ) : variant?.startsWith('flipside-') ? (
    <a class={`flip-3d flip-3d--${variant}`} data-label={frontLabel} href={href} target="_blank" rel="noopener noreferrer">
    </a>
  ) : variant?.startsWith('spinmaster-') ? (
    <a class={`spin-btn spin-btn--${variant}`} href={href} target="_blank" rel="noopener noreferrer">
      <span>{frontLabel}</span>
      <span>{frontLabel}</span>
      <span>{frontLabel}</span>
      <span>{frontLabel}</span>
    </a>
  ) : variant?.startsWith('onaroll-') ? (
    <a class={`btn-179 btn-179--${variant}`} href={href} target="_blank" rel="noopener noreferrer">
      <div class="spn-179">
        <span class="front-text">{frontLabel}</span>
        <span class="back-text">{topLabel}</span>
      </div>
    </a>
  ) : variant?.startsWith('rocknroll-') ? (
    <a class={`rbc-button rbc-button--${variant}`} href={href} target="_blank" rel="noopener noreferrer">
      <span data-front={frontLabel} data-title={topLabel}></span>
    </a>
  ) : variant?.startsWith('scoobysnax-') ? (
    <div class={`rbc-cube rbc-cube--${variant}`}>
      <div class="rbc-side rbc-top">{topLabel}</div>
      <div class="rbc-side rbc-front">{frontLabel}</div>
      <a class="rbc-link" href={href} target="_blank" rel="noopener noreferrer" aria-label={`${frontLabel} (opens in new tab)`}></a>
    </div>
  ) : variant?.startsWith('neuo-') ? (
    <div class={`rbc-cube rbc-cube--${variant}`}>
      <div class="rbc-side rbc-top">{topLabel}</div>
      <div class="rbc-side rbc-front">{frontLabel}</div>
      <a class="rbc-link" href={href} target="_blank" rel="noopener noreferrer" aria-label={`${frontLabel} (opens in new tab)`}></a>
    </div>
  ) : variant?.startsWith('limpbisquit-') ? (
    <div class={`rbc-cube rbc-cube--${variant}`}>
      <div class="rbc-side rbc-top">{topLabel}</div>
      <div class="rbc-side rbc-front">{frontLabel}</div>
      <a class="rbc-link" href={href} target="_blank" rel="noopener noreferrer" aria-label={`${frontLabel} (opens in new tab)`}></a>
    </div>
  ) : (
    <div class={`rbc-cube rbc-cube--${variant}`}>
      <div class="rbc-side rbc-top">{topLabel}</div>
      <div class="rbc-side rbc-front">{frontLabel}</div>
      <a class="rbc-link" href={href} target="_blank" rel="noopener noreferrer" aria-label={`${frontLabel} (opens in new tab)`}></a>
    </div>
