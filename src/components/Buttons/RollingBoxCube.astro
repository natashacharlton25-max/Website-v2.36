---
/** RollingBoxCube.astro (Token-Mapped)
 * Self-contained 3D rolling cube button with animated hover effects.
 */
// Import design system tokens
// import '../../styles/DropShadows.css'; // File doesn't exist
import '../../styles/Glassmorphic.css';
import '../../styles/ButtonSizes.css';

export interface Props {
  href?: string;
  frontLabel?: string;
  topLabel?: string;
  variant?: 'rawhide-primary' | 'rawhide-secondary' | 'rawhide-accent1' | 'rawhide-accent2' | 'rawhide-accent3' | 'rawhide-accent4' | 'rawhide-accent5' |
