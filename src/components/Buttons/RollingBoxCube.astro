    perspective: 1000px;
    width: 100%;
    max-width: 20em;
    margin: 0;
    padding: 0;
  }

  .rbc-cube {
    position: relative;
    width: 100%;
    height: 3em;
    transform-style: preserve-3d;
    transition: transform 0.85s cubic-bezier(0.17, 0.67, 0.14, 0.93);
    cursor: pointer;
  }

  .rbc-cube:hover {
    transform: rotateX(-90deg);
  }

  .rbc-side {
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    height: 3em;
