<div class="nm-root">
  {isDropdownVariant ? (
    <div class="dropdown-wrapper">
      <button
        class={`nm-btn nm-btn--${baseVariant} nm-btn--${shape} nm-btn--radius-${radius} nm-btn--${size} dropdown-btn ${disabled ? 'nm-btn--disabled' : ''}`}
        aria-haspopup="true"
        aria-expanded="false"
        disabled={disabled}
        style={disabled ? 'cursor: not-allowed;' : undefined}
      >
        {label}
        <svg class="dropdown-chevron" viewBox="0 0 24 24" fill="currentColor">
          <path d="M7 10l5 5 5-5z"/>
        </svg>
      </button>
      <ThemedDropdown
        colorTheme={dropdownColorTheme}
        dropdownItems={dropdownItems.map(item => ({ label: item.text, href: item.href }))}
        borderStyle="1px solid"
        colorShade="500"
        hoverColorShade="100"
      />
    </div>
  ) : (
    <button
      class={`nm-btn nm-btn--${variant} nm-btn--${shape} nm-btn--radius-${radius} nm-btn--${size} ${disabled ? 'nm-btn--disabled' : ''}`}
      onclick={disabled ? undefined : `window.top.location.href = '${href}';`}
      disabled={disabled}
      style={disabled ? 'cursor: not-allowed;' : undefined}
    >
      {showIcon ? (
        <div class="nm-icon">
