  label?: string;
  href?: string;
  variant?: 'primary' | 'ghost' | 'accent' | 'secondary' | 'accent1' | 'accent2' | 'accent3' | 'accent4' | 'accent5' |
    'primary-gradient' | 'secondary-gradient' | 'accent1-gradient' | 'accent2-gradient' | 'accent3-gradient' | 'accent4-gradient' | 'accent5-gradient' |
    'primary-bubble' | 'secondary-bubble' | 'accent1-bubble' | 'accent2-bubble' | 'accent3-bubble' | 'accent4-bubble' | 'accent5-bubble' |
    'primary-ghost' | 'secondary-ghost' | 'accent1-ghost' | 'accent2-ghost' | 'accent3-ghost' | 'accent4-ghost' | 'accent5-ghost' |
    'primary-glass' | 'secondary-glass' | 'accent1-glass' | 'accent2-glass' | 'accent3-glass' | 'accent4-glass' | 'accent5-glass' |
    'primary-reversed' | 'secondary-reversed' | 'accent1-reversed' | 'accent2-reversed' | 'accent3-reversed' | 'accent4-reversed' | 'accent5-reversed' |
    'primary-outline' | 'secondary-outline' | 'accent1-outline' | 'accent2-outline' | 'accent3-outline' | 'accent4-outline' | 'accent5-outline' |
    'primary-glow' | 'secondary-glow' | 'accent1-glow' | 'accent2-glow' | 'accent3-glow' | 'accent4-glow' | 'accent5-glow' |
    'primary-dropdown' | 'secondary-dropdown' | 'accent1-dropdown' | 'accent2-dropdown' | 'accent3-dropdown' | 'accent4-dropdown' | 'accent5-dropdown' |
    'glassmorphic' | 'gradient' | 'reversed';
  openInNewTab?: boolean;
  isDropdown?: boolean;
  dropdownItems?: { text: string; href: string }[];
  shape?: 'default' | 'round' | 'square';
  radius?: 'sharp' | 'default' | 'soft' | 'pill';
  size?: 'sm' | 'md' | 'lg';
  animatedIcon?: string;
  disabled?: boolean;
}

const {
  label = 'Button',
  href = 'https://example.com',
  variant = 'primary',
  openInNewTab = false,
  isDropdown = false,
  dropdownItems = [
    { text: 'Option 1', href: 'https://example.com' },
    { text: 'Option 2', href: 'https://example.com' },
    { text: 'Option 3', href: 'https://example.com' }
  ],
  shape = 'default',
  radius = 'default',
  size = 'md',
  animatedIcon,
  disabled = false
} = Astro.props;

const target = openInNewTab ? "_blank" : undefined;
const rel = openInNewTab ? "noopener noreferrer" : undefined;

// Determine if we should show an icon
const showIcon = animatedIcon;

// Check if this is a dropdown variant
const isDropdownVariant = variant.endsWith('-dropdown');
const baseVariant = isDropdownVariant ? variant.replace('-dropdown', '') : variant;

// Map variants to dropdown color themes
const colorThemeMap: Record<string, 'primary' | 'secondary' | 'accent1' | 'accent2' | 'accent3' | 'accent4' | 'accent5'> = {
  'primary': 'primary',
  'secondary': 'secondary',
  'accent1': 'accent1',
  'accent2': 'accent2',
  'accent3': 'accent3',
  'accent4': 'accent4',
  'accent5': 'accent5'
};

const dropdownColorTheme = colorThemeMap[baseVariant] || 'primary';
