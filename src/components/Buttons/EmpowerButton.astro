---
interface Props {
  variant?: 'default' | 'tray' | 'teatray' | 'gradient' | 'glass' | 'bastile' | 'hilltop' | 'glassic';
  size?: 'sm' | 'md' | 'lg';
  shape?: 'button' | 'circle' | 'square';
  animatedIcon?: string;
  href?: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
  disabled?: boolean;
  class?: string;
  cornerRadius?: 'sharp' | 'soft' | 'pill';
}

const {
  variant = 'default',
  size = 'md',
  shape = 'button',
  animatedIcon,
  href = '#',
  target = '_self',
  disabled = false,
  class: className = '',
  cornerRadius,
} = Astro.props;

const Component = href ? 'a' : 'button';
---

<Component
  class={`empower-button empower-button--${variant} empower-button--${size} empower-button--${shape} ${cornerRadius ? `empower-button--${cornerRadius}` : ''} ${className}`}
  href={href}
  target={target}
  disabled={disabled}
  aria-disabled={disabled}
>
  {shape === 'circle' || shape === 'square' ? (
    animatedIcon ? (
      <div class="empower-icon-container" data-animation={animatedIcon}></div>
    ) : null
  ) : (
    <slot>Empower</slot>
  )}
</Component>

<script>
  class EmpowerButtonAnimations {
    constructor() {
      this.animations = new Map<HTMLElement, any>();
      this.initializeAnimations();
    }

    initializeAnimations() {
      const iconContainers = document.querySelectorAll('.empower-icon-container[data-animation]');

      iconContainers.forEach(container => {
        const animationType = container.dataset.animation;
        const button = container.closest('.empower-button');
        if (!button) return;

        let animationPath;

        // Map icon names to paths
        if (animationType.includes('star')) {
          animationPath = '/Animated Icons/Star/star.json';
        } else if (animationType.includes('plus') || animationType.includes('Plus')) {
          animationPath = '/Animated Icons/Plus to X/plusToX.json';
        } else {
          return;
        }

        if (typeof (window as any).lottie === 'undefined') return;

        const animation = window.lottie.loadAnimation({
          container: container,
          renderer: 'svg',
          loop: false,
          autoplay: false,
          path: animationPath
        });

        this.animations.set(container, animation);

        // Set icon color to white after animation loads
        animation.addEventListener('DOMLoaded', () => {
          animation.goToAndStop(0, true);

          setTimeout(() => {
            const svgElements = container.querySelectorAll('svg *');
            svgElements.forEach(el => {
              if (el.getAttribute('fill') && el.getAttribute('fill') !== 'none') {
                el.style.fill = 'white';
                el.setAttribute('fill', 'white');
              }
              if (el.getAttribute('stroke') && el.getAttribute('stroke') !== 'none') {
                el.style.stroke = 'white';
                el.setAttribute('stroke', 'white');
                el.style.strokeWidth = '3';
                el.setAttribute('stroke-width', '3');
              }
            });
          }, 100);
        });

        // Add hover handlers
        button.addEventListener('mouseenter', () => {
          animation.setDirection(1);
          animation.play();
        });

        button.addEventListener('mouseleave', () => {
          animation.setDirection(-1);
          animation.play();
        });
      });
    }
  }

  // Initialize on DOMContentLoaded and also on window load (in case lottie loads late)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new EmpowerButtonAnimations();
    });
  } else {
    new EmpowerButtonAnimations();
  }

  // Also initialize on window load to catch late-loading Lottie
  window.addEventListener('load', () => {
    if (typeof (window as any).lottie !== 'undefined') {
      new EmpowerButtonAnimations();
    }
  });
</script>

