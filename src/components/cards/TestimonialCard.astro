---
// Testimonial Card Component
// Used for displaying customer testimonials, reviews

export interface Props {
  quote: string;
  author: string;
  authorTitle?: string;
  authorCompany?: string;
  authorImage?: string;
  rating?: number; // 1-5
  variant?: 'default' | 'bordered' | 'glass';
  featured?: boolean;
}

const {
  quote,
  author,
  authorTitle,
  authorCompany,
  authorImage,
  rating,
  variant = 'default',
  featured = false
} = Astro.props;
---

<article class={`testimonial-card testimonial-card--${variant} ${featured ? 'testimonial-card--featured' : ''}`}>
  {rating && (
    <div class="testimonial-card__rating">
      {Array.from({ length: 5 }).map((_, i) => (
        <span class={i < rating ? 'star star--filled' : 'star'}>★</span>
      ))}
    </div>
  )}

  <blockquote class="testimonial-card__quote">
    <svg class="testimonial-card__quote-icon" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
      <path d="M9.983 3v7.391c0 5.704-3.731 9.57-8.983 10.609l-.995-2.151c2.432-.917 3.995-3.638 3.995-5.849h-4v-10h9.983zm14.017 0v7.391c0 5.704-3.748 9.57-9 10.609l-.996-2.151c2.433-.917 3.996-3.638 3.996-5.849h-3.983v-10h9.983z"/>
    </svg>
    <p>{quote}</p>
  </blockquote>

  <div class="testimonial-card__author">
    {authorImage && (
      <img
        src={authorImage}
        alt={author}
        class="testimonial-card__author-image"
        loading="lazy"
      />
    )}
    <div class="testimonial-card__author-info">
      <div class="testimonial-card__author-name">{author}</div>
      {(authorTitle || authorCompany) && (
        <div class="testimonial-card__author-meta">
          {authorTitle && <span>{authorTitle}</span>}
          {authorTitle && authorCompany && <span> • </span>}
          {authorCompany && <span>{authorCompany}</span>}
        </div>
      )}
    </div>
  </div>
</article>

<style>
  .testimonial-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
    height: 100%;
    position: relative;
  }

  /* Default variant */
  .testimonial-card--default {
    background: var(--color-Background-50);
    box-shadow: var(--shadow-sm);
  }

  .testimonial-card--default:hover {
    box-shadow: var(--shadow-md);
  }

  /* Bordered variant */
  .testimonial-card--bordered {
    background: var(--color-Background-50);
    border: 2px solid var(--color-Background-200);
  }

  .testimonial-card--bordered:hover {
    border-color: var(--color-Primary-400);
  }

  /* Glass variant */
  .testimonial-card--glass {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: var(--shadow-lg);
  }

  .testimonial-card--featured {
    border: 2px solid var(--color-Primary-500);
  }

  .testimonial-card__rating {
    display: flex;
    gap: 4px;
    color: var(--color-Background-300);
  }

  .star {
    font-size: var(--text-lg);
  }

  .star--filled {
    color: var(--color-AccentFive-500);
  }

  .testimonial-card__quote {
    position: relative;
    margin: 0;
    flex: 1;
  }

  .testimonial-card__quote-icon {
    position: absolute;
    top: -8px;
    left: -8px;
    opacity: 0.1;
    color: var(--color-Primary-600);
  }

  .testimonial-card__quote p {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-Text-700);
    margin: 0;
    position: relative;
    z-index: 1;
  }

  .testimonial-card__author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-Background-200);
  }

  .testimonial-card__author-image {
    width: var(--space-4xl);
    height: var(--space-4xl);
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .testimonial-card__author-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .testimonial-card__author-name {
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-Text-900);
  }

  .testimonial-card__author-meta {
    font-size: var(--text-sm);
    color: var(--color-Text-600);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .testimonial-card {
      padding: var(--space-lg);
    }

    .testimonial-card__quote p {
      font-size: var(--text-sm);
    }

    .testimonial-card__author-image {
      width: var(--space-3xl);
      height: var(--space-3xl);
    }

    .testimonial-card__author-name {
      font-size: var(--text-sm);
    }

    .testimonial-card__author-meta {
      font-size: var(--text-xs);
    }
  }
</style>
