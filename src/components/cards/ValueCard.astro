---
// Value/Feature Card Component
// Used for displaying features, benefits, pillars, values

export interface Props {
  icon?: string; // SVG string or emoji
  title: string;
  description: string;
  href?: string;
  variant?: 'default' | 'bordered' | 'filled' | 'glass';
  iconColor?: string;
  iconBg?: string;
}

const {
  icon,
  title,
  description,
  href,
  variant = 'default',
  iconColor,
  iconBg
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class={`value-card value-card--${variant}`}
  href={href}
  data-href={href ? 'true' : undefined}
>
  {icon && (
    <div class="value-card__icon" style={iconColor ? `color: ${iconColor}; background: ${iconBg || 'transparent'};` : undefined}>
      <Fragment set:html={icon} />
    </div>
  )}

  <div class="value-card__content">
    <h3 class="value-card__title">{title}</h3>
    <p class="value-card__description">{description}</p>
  </div>

  {href && (
    <div class="value-card__arrow">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  )}
</Tag>

<style>
  .value-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
    height: 100%;
    position: relative;
  }

  /* Default variant */
  .value-card--default {
    background: var(--color-Background-50);
  }

  .value-card--default:hover {
    background: var(--color-Background-100);
  }

  /* Bordered variant */
  .value-card--bordered {
    background: var(--color-Background-50);
    border: 2px solid var(--color-Background-200);
  }

  .value-card--bordered:hover {
    border-color: var(--color-Primary-500);
    box-shadow: var(--shadow-md);
  }

  /* Filled variant */
  .value-card--filled {
    background: var(--color-Primary-50);
    border: 1px solid var(--color-Primary-100);
  }

  .value-card--filled:hover {
    background: var(--color-Primary-100);
    border-color: var(--color-Primary-200);
  }

  /* Glass variant */
  .value-card--glass {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: var(--shadow-lg);
  }

  .value-card--glass:hover {
    background: rgba(255, 255, 255, 0.15);
    box-shadow: var(--shadow-xl);
  }

  /* Hover effect for links */
  a.value-card:hover {
    transform: translateY(-4px);
    cursor: pointer;
  }

  .value-card__icon {
    width: var(--space-4xl);
    height: var(--space-4xl);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    flex-shrink: 0;
    color: var(--color-Primary-600);
  }

  .value-card__icon :global(svg) {
    width: 100%;
    height: 100%;
    max-width: var(--space-3xl);
    max-height: var(--space-3xl);
  }

  /* Icon backgrounds per variant */
  .value-card--default .value-card__icon {
    background: var(--color-Primary-50);
  }

  .value-card--bordered .value-card__icon {
    background: var(--color-Primary-50);
  }

  .value-card--filled .value-card__icon {
    background: var(--color-Primary-100);
  }

  .value-card--glass .value-card__icon {
    background: rgba(255, 255, 255, 0.2);
  }

  .value-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .value-card__title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-Text-900);
    margin: 0;
    line-height: 1.3;
  }

  a.value-card:hover .value-card__title {
    color: var(--color-Primary-600);
  }

  .value-card__description {
    font-size: var(--text-base);
    color: var(--color-Text-600);
    line-height: 1.6;
    margin: 0;
  }

  .value-card__arrow {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    color: var(--color-Primary-600);
    transition: transform 0.3s ease;
  }

  a.value-card:hover .value-card__arrow {
    transform: translateX(4px);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .value-card {
      padding: var(--space-lg);
    }

    .value-card__icon {
      width: var(--space-3xl);
      height: var(--space-3xl);
    }

    .value-card__title {
      font-size: var(--text-base);
    }

    .value-card__description {
      font-size: var(--text-sm);
    }
  }
</style>
