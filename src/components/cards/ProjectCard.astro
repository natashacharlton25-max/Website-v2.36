---
// Project/Portfolio Card Component
// Used for displaying projects, case studies, portfolio items

export interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  category?: string;
  tags?: string[];
  client?: string;
  year?: string;
  href?: string;
  featured?: boolean;
  variant?: 'default' | 'overlay' | 'minimal';
}

const {
  title,
  description,
  image,
  imageAlt = title,
  category,
  tags = [],
  client,
  year,
  href,
  featured = false,
  variant = 'default'
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class={`project-card project-card--${variant} ${featured ? 'project-card--featured' : ''}`}
  href={href}
>
  {image && (
    <div class="project-card__image">
      <img src={image} alt={imageAlt} loading="lazy" />
      {variant === 'overlay' && (
        <div class="project-card__overlay">
          <div class="project-card__overlay-content">
            <h3 class="project-card__title">{title}</h3>
            {category && (
              <span class="project-card__category">{category}</span>
            )}
          </div>
        </div>
      )}
      {category && variant !== 'overlay' && (
        <span class="project-card__badge">{category}</span>
      )}
    </div>
  )}

  {variant !== 'overlay' && (
    <div class="project-card__content">
      <div class="project-card__header">
        <h3 class="project-card__title">{title}</h3>
        {(client || year) && (
          <div class="project-card__meta">
            {client && <span class="project-card__client">{client}</span>}
            {client && year && <span> â€¢ </span>}
            {year && <span class="project-card__year">{year}</span>}
          </div>
        )}
      </div>

      <p class="project-card__description">{description}</p>

      {tags.length > 0 && (
        <div class="project-card__tags">
          {tags.slice(0, 4).map(tag => (
            <span class="project-card__tag">{tag}</span>
          ))}
        </div>
      )}

      {href && (
        <div class="project-card__link">
          View Project
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      )}
    </div>
  )}
</Tag>

<style>
  .project-card {
    background: var(--color-Background-50);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-sm);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  a.project-card {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .project-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .project-card--featured {
    border: 2px solid var(--color-Primary-500);
  }

  .project-card__image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--color-Background-100);
  }

  .project-card--minimal .project-card__image {
    aspect-ratio: 16 / 9;
  }

  .project-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-card__image img {
    transform: scale(1.05);
  }

  .project-card__badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    background: var(--color-Primary-600);
    color: var(--color-Background-50);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Overlay variant */
  .project-card--overlay .project-card__image {
    aspect-ratio: 4 / 3;
  }

  .project-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.8) 100%
    );
    display: flex;
    align-items: flex-end;
    padding: var(--space-xl);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card--overlay:hover .project-card__overlay {
    opacity: 1;
  }

  .project-card__overlay-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .project-card--overlay .project-card__title {
    color: var(--color-Background-50);
    font-size: var(--text-2xl);
  }

  .project-card--overlay .project-card__category {
    background: var(--color-Primary-600);
    color: var(--color-Background-50);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    align-self: flex-start;
  }

  /* Content */
  .project-card__content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    flex: 1;
  }

  .project-card--minimal .project-card__content {
    padding: var(--space-md);
  }

  .project-card__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .project-card__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-900);
    margin: 0;
    line-height: 1.3;
  }

  .project-card--minimal .project-card__title {
    font-size: var(--text-lg);
  }

  a.project-card:hover .project-card__title {
    color: var(--color-Primary-600);
  }

  .project-card__meta {
    font-size: var(--text-sm);
    color: var(--color-Text-500);
  }

  .project-card__client {
    font-weight: var(--font-semibold);
    color: var(--color-Primary-600);
  }

  .project-card__description {
    font-size: var(--text-base);
    color: var(--color-Text-600);
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }

  .project-card--minimal .project-card__description {
    font-size: var(--text-sm);
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .project-card__tag {
    background: var(--color-Background-100);
    color: var(--color-Text-700);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
  }

  .project-card__link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-Primary-600);
    transition: gap 0.2s ease;
  }

  a.project-card:hover .project-card__link {
    gap: var(--space-sm);
  }

  .project-card__link svg {
    stroke-width: 2;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .project-card__content {
      padding: var(--space-md);
    }

    .project-card__title {
      font-size: var(--text-lg);
    }

    .project-card__description {
      font-size: var(--text-sm);
    }

    .project-card--overlay .project-card__overlay {
      padding: var(--space-lg);
    }

    .project-card--overlay .project-card__title {
      font-size: var(--text-xl);
    }
  }
</style>
