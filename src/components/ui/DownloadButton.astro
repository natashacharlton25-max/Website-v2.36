---
// Download Button Component for PDF Products
// Simple direct download without external services

export interface Props {
  productId?: string;
  productName: string;
  downloadUrl: string; // Direct URL to the file
  buttonText?: string;
  buttonClass?: string;
}

const {
  productId,
  productName,
  downloadUrl,
  buttonText = 'Download',
  buttonClass = 'btn btn-primary',
} = Astro.props;
---

<a
  href={downloadUrl}
  download={productName}
  class={`download-pdf-btn ${buttonClass}`}
  data-product-id={productId}
  data-product-name={productName}
>
  <span class="btn-text">{buttonText}</span>
</a>

<style>
  .download-pdf-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .download-pdf-btn:hover {
    opacity: 0.9;
  }

  .btn-text {
    display: inline-block;
  }
</style>
