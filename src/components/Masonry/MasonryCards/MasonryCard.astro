---
/**
 * MasonryCard - Unified card component with variant props
 *
 * All cards share the same base styling, with variants controlling layout.
 *
 * Variants:
 * - breadcrumb: Simple text block
 * - icon: Centered text with optional icon
 * - title: Large heading
 * - summary: Label + text block
 * - tag: Centered icon + title
 * - stat: Large value + label
 * - highlight: Icon + emphasized text
 * - quote: Quote icon + text + author
 * - spec: Icon + value + label
 * - text: Title + content + optional button (linkable)
 * - image: Image with optional overlay
 * - mixed: Image + text content (linkable)
 */
import Icon from '../../Icons/Icon.astro';

export type CardVariant = 'breadcrumb' | 'icon' | 'title' | 'summary' | 'tag' | 'stat' | 'highlight' | 'quote' | 'spec' | 'text' | 'image' | 'mixed';
export type CardSize = 'small' | 'medium' | 'large' | 'wide';

interface Props {
  variant: CardVariant;
  size?: CardSize;
  bgColor?: string;
  textColor?: string;
  // Content props
  title?: string;
  content?: string;
  label?: string;
  value?: string;
  author?: string;
  icon?: string;
  image?: string;
  alt?: string;
  badge?: string;
  link?: string;
  button?: { text: string; link: string };
  class?: string;
}

const {
  variant,
  size = 'medium',
  bgColor,
  textColor,
  title,
  content,
  label,
  value,
  author,
  icon,
  image,
  alt,
  badge,
  link,
  button,
  class: className = ''
} = Astro.props;

// Default colors per variant
const defaultColors: Record<CardVariant, { bg: string; text: string }> = {
  breadcrumb: { bg: 'var(--color-Neutral-700)', text: 'var(--color-Text-50)' },
  icon: { bg: 'var(--color-AccentOne-200)', text: 'var(--color-Text-700)' },
  title: { bg: 'var(--color-AccentOne-200)', text: 'var(--color-Text-700)' },
  summary: { bg: 'var(--color-Primary-300)', text: 'var(--color-Text-700)' },
  tag: { bg: 'var(--color-Primary-200)', text: 'var(--color-Text-700)' },
  stat: { bg: 'var(--color-AccentTwo-200)', text: 'var(--color-Text-700)' },
  highlight: { bg: 'var(--color-AccentThree-200)', text: 'var(--color-Text-700)' },
  quote: { bg: 'var(--color-AccentFour-200)', text: 'var(--color-Text-700)' },
  spec: { bg: 'var(--color-AccentFive-200)', text: 'var(--color-Text-700)' },
  text: { bg: 'var(--color-Primary-200)', text: 'var(--color-Text-700)' },
  image: { bg: 'transparent', text: 'var(--color-Text-700)' },
  mixed: { bg: 'var(--color-Primary-200)', text: 'var(--color-Text-700)' }
};

const bg = bgColor || defaultColors[variant].bg;
const text = textColor || defaultColors[variant].text;

// Calculate hover border color
function getHoverBorderColor(bgColor: string): string {
  const match = bgColor.match(/var\(--color-(\w+)-(\d+)\)/);
  if (!match) return 'var(--color-Text-950)';
  const [, colorName, shadeStr] = match;
  const shade = parseInt(shadeStr, 10);
  return shade >= 700 ? `var(--color-${colorName}-500)` : `var(--color-${colorName}-800)`;
}

const hoverBorder = getHoverBorderColor(bg);
const isLink = !!link && (variant === 'text' || variant === 'image' || variant === 'mixed');
const Tag = isLink ? 'a' : 'div';
const linkProps = isLink ? { href: link } : {};

const cardClass = `masonry-card masonry-card--${size} masonry-card--${variant} ${isLink ? 'masonry-card--link' : ''} ${className}`.trim();
const cardStyle = `background: ${bg}; color: ${text}; --card-hover-border: ${hoverBorder};`;
---

<Tag
  class={cardClass}
  style={cardStyle}
  data-scroll-reveal-item
  {...linkProps}
>
  {/* Breadcrumb */}
  {variant === 'breadcrumb' && (
    <p class="card__text">{content}</p>
  )}

  {/* Icon */}
  {variant === 'icon' && (
    <p class="card__title card__title--centered">{title}</p>
  )}

  {/* Title */}
  {variant === 'title' && (
    <h1 class="card__heading">{title}</h1>
  )}

  {/* Summary */}
  {variant === 'summary' && (
    <>
      <h3 class="card__label">{label || 'Summary'}</h3>
      <p class="card__text">{content}</p>
    </>
  )}

  {/* Tag */}
  {variant === 'tag' && (
    <>
      {icon && (
        <div class="card__icon-wrapper">
          <Icon name={icon} class="card__icon" size={48} />
        </div>
      )}
      {title && <h3 class="card__title card__title--centered">{title}</h3>}
    </>
  )}

  {/* Stat */}
  {variant === 'stat' && (
    <>
      {(value || content) && <p class="card__value">{value || content}</p>}
      {(label || title) && <h3 class="card__label card__label--small">{label || title}</h3>}
    </>
  )}

  {/* Highlight */}
  {variant === 'highlight' && (
    <>
      {icon && (
        <div class="card__icon-wrapper">
          <Icon name={icon} class="card__icon" size={40} />
        </div>
      )}
      {content && <p class="card__text card__text--emphasis">{content}</p>}
    </>
  )}

  {/* Quote */}
  {variant === 'quote' && (
    <>
      <div class="card__quote-icon">
        <Icon name="interface/quotes-fill" class="card__icon" size={32} />
      </div>
      {content && <blockquote class="card__quote">{content}</blockquote>}
      {(author || title) && <cite class="card__author">â€” {author || title}</cite>}
    </>
  )}

  {/* Spec */}
  {variant === 'spec' && (
    <>
      {icon && (
        <div class="card__icon-wrapper card__icon-wrapper--small">
          <Icon name={icon} class="card__icon" size={32} />
        </div>
      )}
      {(value || content) && <span class="card__value card__value--large">{value || content}</span>}
      {(label || title) && <span class="card__label">{label || title}</span>}
    </>
  )}

  {/* Text */}
  {variant === 'text' && (
    <div class="card__content">
      {icon && (
        <div class="card__icon-wrapper">
          <Icon name={icon} class="card__icon" size={48} />
        </div>
      )}
      {badge && <span class="card__badge">{badge}</span>}
      {title && <h3 class="card__title">{title}</h3>}
      {content && <p class="card__text">{content}</p>}
      {button && <a href={button.link} class="card__button">{button.text}</a>}
      {link && (
        <div class="card__arrow">
          <Icon name="interface/plus-circle-fill" size={40} />
        </div>
      )}
    </div>
  )}

  {/* Image */}
  {variant === 'image' && (
    <>
      <img src={image} alt={alt} loading="lazy" />
      {title && <div class="card__overlay"><p>{title}</p></div>}
    </>
  )}

  {/* Mixed */}
  {variant === 'mixed' && (
    <div class="card__content">
      {image && (
        <div class="card__image">
          <img src={image} alt={alt} loading="lazy" />
        </div>
      )}
      {badge && <span class="card__badge">{badge}</span>}
      {title && <h3 class="card__title">{title}</h3>}
      {content && <p class="card__text">{content}</p>}
      <div class="card__arrow">
        <Icon name="interface/plus-circle-fill" size={40} />
      </div>
    </div>
  )}
</Tag>

<style>
  /* Base card - shared by all variants */
  .masonry-card {
    display: inline-block;
    width: 100%;
    margin-bottom: var(--space-xl);
    break-inside: avoid;
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    transition: border-color var(--transition-fast);
    position: relative;
    filter: drop-shadow(var(--shadow-lg));
    border: var(--border-width-md) solid transparent;
  }

  .masonry-card:hover {
    border-color: var(--card-hover-border, currentColor);
  }

  .masonry-card--link {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  /* ========== Typography - shared base ========== */
  .card__heading {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    color: inherit;
    margin: 0;
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-wide);
  }

  .card__title {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    margin: 0 0 var(--space-sm) 0;
    color: inherit;
    letter-spacing: var(--tracking-wide);
  }

  .card__title--centered {
    text-align: center;
    margin: 0;
  }

  .card__label {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin: 0 0 var(--space-md) 0;
    color: inherit;
  }

  .card__label--small {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    letter-spacing: var(--tracking-wider);
    margin: 0;
    opacity: var(--opacity-high);
  }

  .card__text {
    font-family: var(--font-heading);
    font-size: var(--text-base);
    color: inherit;
    line-height: var(--leading-relaxed);
    margin: 0;
    letter-spacing: var(--tracking-normal);
  }

  .card__text--emphasis {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    line-height: var(--leading-snug);
  }

  .card__value {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-xs) 0;
    color: inherit;
    line-height: var(--leading-tight);
    word-wrap: break-word;
  }

  .card__value--large {
    font-size: var(--text-3xl);
    line-height: var(--leading-none);
    margin: 0;
  }

  .card__quote {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-style: italic;
    margin: 0 0 var(--space-md) 0;
    color: inherit;
    line-height: var(--leading-normal);
    quotes: none;
  }

  .card__author {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    font-style: normal;
    color: inherit;
    opacity: var(--opacity-high);
  }

  /* ========== Icons ========== */
  .card__icon-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: var(--space-md);
  }

  .card__icon-wrapper--small {
    margin-bottom: var(--space-sm);
    opacity: var(--opacity-high);
  }

  .card__icon {
    flex-shrink: 0;
    color: inherit;
    opacity: var(--opacity-high);
  }

  .card__quote-icon {
    margin-bottom: var(--space-sm);
    opacity: var(--opacity-medium);
  }

  .card__arrow {
    color: inherit;
    opacity: var(--opacity-medium-high);
    margin-top: auto;
  }

  /* ========== Badge & Button ========== */
  .card__badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: color-mix(in oklch, var(--color-Text-900) 10%, transparent);
    border-radius: var(--border-radius-full);
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-sm);
    width: fit-content;
  }

  .card__button {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: var(--color-Background-50);
    color: var(--color-Text-700);
    text-decoration: none;
    border-radius: var(--border-radius-full);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    white-space: nowrap;
    width: fit-content;
    letter-spacing: var(--tracking-normal);
  }

  /* ========== Layout Variants ========== */
  .masonry-card--breadcrumb {
    padding: var(--space-md) var(--space-lg);
    cursor: default;
  }

  .masonry-card--icon {
    padding: var(--space-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: var(--aspect-square);
  }

  .masonry-card--title {
    padding: var(--space-2xl) var(--space-xl);
  }

  .masonry-card--summary {
    padding: var(--space-xl);
  }

  .masonry-card--tag {
    padding: var(--space-xl);
    text-align: center;
  }

  .masonry-card--stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
  }

  .masonry-card--highlight {
    padding: var(--space-xl);
    text-align: center;
  }

  .masonry-card--quote {
    padding: var(--space-xl);
  }

  .masonry-card--spec {
    padding: var(--space-xl);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .masonry-card--text .card__content,
  .masonry-card--mixed .card__content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
  }

  .masonry-card--text.masonry-card--link .card__content {
    text-align: center;
    align-items: center;
  }

  /* ========== Image ========== */
  .masonry-card--image img {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(var(--shadow-md));
  }

  .card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-md);
    background: linear-gradient(to top, color-mix(in oklch, var(--color-Text-900) 70%, transparent), transparent);
    color: var(--color-Text-50);
  }

  .card__image img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: var(--aspect-video);
    object-fit: cover;
    filter: drop-shadow(var(--shadow-md));
  }

  /* ========== Size Variants ========== */
  .masonry-card--wide {
    column-span: all;
  }

  .masonry-card--small img {
    aspect-ratio: var(--aspect-3-2);
    object-fit: cover;
  }

  .masonry-card--medium img {
    aspect-ratio: var(--aspect-4-5);
    object-fit: cover;
  }

  .masonry-card--large img {
    aspect-ratio: var(--aspect-3-4);
    object-fit: cover;
  }

  /* ========== Responsive ========== */
  @media (max-width: 1024px) {
    .masonry-card {
      margin-bottom: var(--space-md);
    }
  }

  @media (max-width: 767px) {
    .masonry-card {
      margin-bottom: var(--space-sm);
    }

    .card__heading {
      font-size: clamp(var(--text-lg), 4vw, var(--text-2xl));
    }
  }
</style>
