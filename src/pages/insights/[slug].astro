---
import BaseLayout from '../../Layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import FooterWithMask from '../../components/Footer/FooterWithMask.astro';

// Helper to get folder slug from entry.id (handles index.md suffix and path separators)
const getSlug = (id: string) => {
  const normalized = id.replace(/[\\/]index\.md$/, '');
  return normalized.split(/[\\/]/).pop() || id;
};

export async function getStaticPaths() {
  const getSlugFromId = (id: string) => {
    const normalized = id.replace(/[\\/]index\.md$/, '');
    return normalized.split(/[\\/]/).pop() || id;
  };

  const insights = await getCollection('insights');
  return insights.map((entry) => ({
    params: { slug: getSlugFromId(entry.id) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { linkedAssets } = entry.data;

// Get author data from authors collection
const authorSlug = entry.data.author;
const allAuthors = await getCollection('authors');
const authorEntry = allAuthors.find(a => getSlug(a.id) === authorSlug);
const author = authorEntry?.data;

// Get suggested posts (same category, excluding current)
const allInsights = await getCollection('insights');
const currentSlug = getSlug(entry.id);
const suggestedPosts = allInsights
  .filter(post => getSlug(post.id) !== currentSlug && post.data.category === entry.data.category)
  .slice(0, 3);
---

<BaseLayout
  title={entry.data.seoTitle || entry.data.title}
  description={entry.data.seoDescription || entry.data.description}
  image={entry.data.cardImage.src}
  hideFooter={true}
>
  <article class="blog-post">
    <!-- Post Header -->
    <header class="post-header">
      <div class="container container-6xl">
        <div class="post-meta">
          <span class="post-category">{entry.data.category}</span>
          <span class="post-date">{entry.data.publishDate}</span>
          <span class="post-author">By {author?.name || entry.data.author}</span>
        </div>
        <h1 class="post-title">{entry.data.title}</h1>
        <p class="post-description">{entry.data.description}</p>
      </div>
    </header>

    <!-- Hero Image -->
    {entry.data.cardImage && (
      <div class="post-hero-image">
        <img src={entry.data.cardImage.src} alt={entry.data.title} />
      </div>
    )}

    <!-- Post Content -->
    <div class="post-content">
      <div class="container container-4xl">
        <Content />
      </div>
    </div>

    <!-- Tags -->
    {entry.data.tags && entry.data.tags.length > 0 && (
      <footer class="post-footer">
        <div class="container container-4xl">
          <div class="post-tags">
            {entry.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </footer>
    )}
  </article>

  <!-- About the Author -->
  {author && (
    <section class="about-author">
      <div class="container container-6xl">
        <div class="author-card">
          <div class="author-image">
            <Image src={author.photo} alt={author.name} />
          </div>
          <div class="author-content">
            <div class="author-header">
              <h2 class="author-heading">About the Author</h2>
              <h3 class="author-name">{author.name}</h3>
              {author.role && <span class="author-role">{author.role}</span>}
            </div>
            <p class="author-bio">{author.bio}</p>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Linked Assets -->
  {linkedAssets && linkedAssets.length > 0 && (
    <section class="linked-assets">
      <div class="container container-6xl">
        <h2 class="section-heading">Recommended Resources</h2>
        <div class="assets-grid">
          {linkedAssets.map(asset => (
            <a href={asset.url} class="asset-card">
              <div class="asset-card-content">
                {asset.type && (
                  <span class="asset-type">{asset.type}</span>
                )}
                <h3 class="asset-title">{asset.title}</h3>
                {asset.description && (
                  <p class="asset-description">{asset.description}</p>
                )}
                <span class="asset-link">View Resource â†’</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Suggested Posts -->
  {suggestedPosts.length > 0 && (
    <section class="suggested-posts">
      <div class="container container-6xl">
        <h2 class="section-heading">More in {entry.data.category}</h2>
        <div class="posts-grid">
          {suggestedPosts.map(post => (
            <a href={`/insights/${getSlug(post.id)}`} class="post-card">
              {post.data.cardImage && (
                <div class="post-card-image">
                  <img src={post.data.cardImage.src} alt={post.data.title} />
                </div>
              )}
              <div class="post-card-content">
                <span class="post-card-category">{post.data.category}</span>
                <h3 class="post-card-title">{post.data.title}</h3>
                <p class="post-card-description">{post.data.description}</p>
                <span class="post-card-date">{post.data.publishDate}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <FooterWithMask backgroundImage="/Footer/Footer-Reveal.png" />
</BaseLayout>

<style>
  /* Blog Post Layout */
  .blog-post {
    background-color: var(--color-Background-100);
  }

  .post-header {
    padding: calc(100px + var(--space-3xl)) 0 var(--space-3xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    font-size: var(--text-sm);
    color: var(--color-Text-500);
  }

  .post-category {
    padding: var(--space-xs) var(--space-md);
    background: var(--color-Primary-100);
    color: var(--color-Primary-700);
    border-radius: var(--border-radius-full);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: var(--text-xs);
  }

  .post-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: var(--font-extrabold);
    color: var(--color-Text-700);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-lg);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-description {
    font-size: var(--text-xl);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
    max-width: 700px;
    margin: 0 auto;
    font-style: italic;
  }

  .post-hero-image {
    max-width: 1200px;
    margin: 0 auto var(--space-4xl);
    padding: 0 var(--space-xl);
  }

  .post-hero-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-2xl);
  }

  .post-content {
    padding: var(--space-3xl) 0;
  }

  .post-content :global(h2) {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    line-height: var(--leading-tight);
    margin-top: var(--space-3xl);
    margin-bottom: var(--space-xl);
  }

  .post-content :global(h3) {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--color-Text-700);
    line-height: var(--leading-snug);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-lg);
  }

  .post-content :global(p) {
    font-size: var(--text-lg);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-lg);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-lg);
    padding-left: var(--space-xl);
  }

  .post-content :global(li) {
    font-size: var(--text-lg);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-sm);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-Primary-500);
    padding-left: var(--space-xl);
    margin: var(--space-2xl) 0;
    font-style: italic;
    color: var(--color-Text-600);
  }

  .post-content :global(strong) {
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
  }

  .post-content :global(a) {
    color: var(--color-Primary-600);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .post-content :global(a:hover) {
    color: var(--color-Primary-700);
  }

  .post-footer {
    padding: var(--space-2xl) 0;
    border-top: 1px solid var(--color-Neutral-200);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag {
    padding: var(--space-xs) var(--space-md);
    background: var(--color-Neutral-100);
    color: var(--color-Text-600);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  /* About Author */
  .about-author {
    padding: var(--space-4xl) 0;
    background-color: var(--color-Background-50);
  }

  .author-card {
    display: flex;
    align-items: center;
    gap: var(--space-2xl);
    padding: var(--space-2xl) var(--space-3xl);
    background: white;
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .author-image {
    flex-shrink: 0;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  .author-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .author-content {
    flex: 1;
  }

  .author-heading {
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-Primary-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-xs);
  }

  .author-name {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    margin: 0 0 var(--space-xs);
  }

  .author-role {
    font-size: var(--text-sm);
    color: var(--color-Primary-600);
    display: block;
    margin-bottom: var(--space-md);
  }

  .author-bio {
    font-size: var(--text-base);
    color: var(--color-Text-600);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Linked Assets */
  .linked-assets {
    padding: var(--space-4xl) 0;
    background-color: var(--color-Background-100);
  }

  .section-heading {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    margin-bottom: var(--space-2xl);
  }

  .assets-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
  }

  .asset-card {
    background: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    text-decoration: none;
    box-shadow: var(--shadow-md);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .asset-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .asset-card-content {
    padding: var(--space-xl);
  }

  .asset-type {
    font-size: var(--text-xs);
    color: var(--color-Primary-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-semibold);
  }

  .asset-title {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    margin: var(--space-sm) 0;
  }

  .asset-description {
    font-size: var(--text-sm);
    color: var(--color-Text-600);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .asset-link {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-Primary-600);
  }

  /* Suggested Posts */
  .suggested-posts {
    padding: var(--space-4xl) 0;
    background-color: var(--color-Background-50);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-2xl);
  }

  .post-card {
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all 0.2s;
    text-decoration: none;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .post-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s;
  }

  .post-card:hover .post-card-image img {
    transform: scale(1.05);
  }

  .post-card-content {
    padding: var(--space-xl);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-card-category {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: var(--color-Primary-100);
    color: var(--color-Primary-700);
    border-radius: var(--border-radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
    align-self: flex-start;
  }

  .post-card-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-md);
  }

  .post-card-description {
    font-size: var(--text-sm);
    color: var(--color-Text-600);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    flex: 1;
  }

  .post-card-date {
    font-size: var(--text-xs);
    color: var(--color-Text-500);
    margin-top: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .post-header {
      padding: calc(80px + var(--space-2xl)) 0 var(--space-2xl);
    }

    .post-meta {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .author-card {
      flex-direction: column;
      text-align: center;
      padding: var(--space-xl);
    }

    .author-image {
      width: 100px;
      height: 100px;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .post-title {
      font-size: var(--text-2xl);
    }

    .post-description {
      font-size: var(--text-base);
    }

    .post-content :global(h2) {
      font-size: var(--text-2xl);
    }

    .post-content :global(h3) {
      font-size: var(--text-xl);
    }

    .post-content :global(p),
    .post-content :global(li) {
      font-size: var(--text-base);
    }
  }
</style>
