---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { projects } from '../../../data/projects';

// Export getStaticPaths for static site generation
export async function getStaticPaths() {
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project }
  }));
}

const { slug } = Astro.params;
const { project } = Astro.props;

// Fallback if project not found
if (!project) {
  return Astro.redirect('/projects');
}

const { professional } = project;
---

<BaseLayout
  title={`${project.title} - Professional Resources | Walking with a Smile`}
  description={`Professional guidance, implementation strategies, and evidence-based information for ${project.title}`}
>
  <!-- Breadcrumbs -->
  <section class="breadcrumbs-section">
    <div class="container container-7xl">
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">›</span>
        <a href="/projects">Projects</a>
        <span class="separator">›</span>
        <a href={`/projects/${project.slug}`}>{project.title}</a>
        <span class="separator">›</span>
        <span class="current">Professional Resources</span>
      </nav>
    </div>
  </section>

  <!-- Page Header -->
  <section class="page-header section-sm">
    <div class="container container-7xl">
      <div class="header-badge">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
        </svg>
        Professional Resources
      </div>
      <h1 class="page-title">{project.title}</h1>
      <p class="page-description">
        Comprehensive guidance and evidence-based information for professionals implementing this project
      </p>
      <div class="back-link-container">
        <a href={`/projects/${project.slug}`} class="back-link">
          ← Back to Project Overview
        </a>
      </div>
    </div>
  </section>

  <!-- Intention -->
  <section class="intention-section section-sm bg-highlight">
    <div class="container container-6xl">
      <div class="content-card card">
        <div class="card-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <h2 class="card-title">Project Intention</h2>
        <p class="card-content">{professional.intention}</p>
      </div>
    </div>
  </section>

  <!-- Summary -->
  <section class="summary-section section-sm">
    <div class="container container-6xl">
      <h2 class="section-title">Summary</h2>
      <div class="summary-content">
        <p>{professional.summary}</p>
      </div>
    </div>
  </section>

  <!-- Guidance Notes -->
  <section class="guidance-section section bg-alt">
    <div class="container container-6xl">
      <div class="section-header">
        <div class="section-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <div>
          <h2 class="section-title">Guidance Notes</h2>
          <p class="section-subtitle">Practical implementation strategies and best practices</p>
        </div>
      </div>
      <div class="guidance-content card">
        <div class="guidance-text" set:html={professional.guidanceNotes.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>').replace(/\n/g, '<br>')} />
      </div>
    </div>
  </section>

  <!-- Evidence-Based Benefits -->
  <section class="benefits-section section">
    <div class="container container-6xl">
      <div class="section-header">
        <div class="section-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        </div>
        <div>
          <h2 class="section-title">Evidence-Based Benefits</h2>
          <p class="section-subtitle">Research-supported outcomes and impacts</p>
        </div>
      </div>
      <div class="benefits-grid">
        {professional.evidenceBasedBenefits.map(benefit => (
          <div class="benefit-card card">
            <div class="benefit-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
            </div>
            <p class="benefit-text">{benefit}</p>
          </div>
        ))}
      </div>
    </section>

  <!-- Downloadable Resources -->
  {professional.downloadableResources && professional.downloadableResources.length > 0 && (
    <section class="downloads-section section bg-alt">
      <div class="container container-6xl">
        <div class="section-header">
          <div class="section-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
          </div>
          <div>
            <h2 class="section-title">Professional Downloads</h2>
            <p class="section-subtitle">Templates, forms, and implementation guides</p>
          </div>
        </div>
        <div class="downloads-grid">
          {professional.downloadableResources.map(resource => (
            <div class="download-card card">
              <div class="download-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
              </div>
              <div class="download-content">
                <h3 class="download-title">{resource}</h3>
                <button class="download-btn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                  Download
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="cta-section section">
    <div class="container container-6xl">
      <div class="cta-card card">
        <h2 class="cta-title">Ready to Implement?</h2>
        <p class="cta-description">
          Return to the main project page to view and download all the resources included in this collection.
        </p>
        <div class="cta-buttons">
          <a href={`/projects/${project.slug}`} class="btn btn-primary btn-lg">
            View Project Resources
          </a>
          <a href="/projects" class="btn btn-outline btn-lg">
            Browse All Projects
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Download button handlers
  const downloadBtns = document.querySelectorAll('.download-btn');
  downloadBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // TODO: Implement actual download functionality
      alert('Download functionality will be implemented to retrieve the actual PDF/file');
    });
  });
</script>

<style>
  /* Breadcrumbs */
  .breadcrumbs-section {
    padding: var(--space-lg) 0;
    background: var(--color-Background-100);
  }

  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    flex-wrap: wrap;
  }

  .breadcrumbs a {
    color: var(--brand-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .breadcrumbs a:hover {
    color: var(--brand-primary);
  }

  .breadcrumbs .separator {
    color: var(--brand-text-muted);
  }

  .breadcrumbs .current {
    color: var(--brand-text);
    font-weight: var(--font-semibold);
  }

  /* Page Header */
  .page-header {
    text-align: center;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: var(--brand-primary);
    color: white;
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-lg);
  }

  .page-title {
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--brand-text);
  }

  .page-description {
    font-size: var(--text-lg);
    color: var(--brand-text-muted);
    max-width: 700px;
    margin: 0 auto var(--space-xl);
    line-height: var(--leading-relaxed);
  }

  .back-link-container {
    margin-top: var(--space-xl);
  }

  .back-link {
    color: var(--brand-primary);
    text-decoration: none;
    font-weight: var(--font-semibold);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--brand-primary-dark);
  }

  /* Intention Section */
  .bg-highlight {
    background: linear-gradient(135deg, var(--brand-primary-light), var(--brand-primary));
  }

  .content-card {
    padding: var(--space-3xl);
    background: white;
  }

  .card-icon {
    color: var(--brand-primary);
    margin-bottom: var(--space-lg);
  }

  .card-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-lg);
    color: var(--brand-text);
  }

  .card-content {
    font-size: var(--text-lg);
    color: var(--brand-text-muted);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Summary Section */
  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--brand-text);
  }

  .summary-content p {
    font-size: var(--text-lg);
    color: var(--brand-text-muted);
    line-height: var(--leading-relaxed);
  }

  /* Section Header */
  .section-header {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
    align-items: flex-start;
  }

  .section-icon {
    color: var(--brand-primary);
    flex-shrink: 0;
  }

  .section-subtitle {
    font-size: var(--text-base);
    color: var(--brand-text-muted);
    margin-top: var(--space-xs);
  }

  /* Guidance Section - .bg-alt uses global class from utilities.css */

  .guidance-content {
    padding: var(--space-3xl);
  }

  .guidance-text {
    font-size: var(--text-base);
    color: var(--brand-text-muted);
    line-height: var(--leading-relaxed);
  }

  .guidance-text strong {
    color: var(--brand-text);
    font-weight: var(--font-semibold);
    display: block;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .guidance-text strong:first-child {
    margin-top: 0;
  }

  /* Benefits Section */
  .benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  .benefit-card {
    padding: var(--space-xl);
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
    transition: all var(--transition-base);
  }

  .benefit-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .benefit-icon {
    color: var(--brand-success);
    flex-shrink: 0;
  }

  .benefit-text {
    font-size: var(--text-base);
    color: var(--brand-text-muted);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Downloads Section */
  .downloads-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  .download-card {
    padding: var(--space-xl);
    display: flex;
    gap: var(--space-lg);
    align-items: center;
    transition: all var(--transition-base);
  }

  .download-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .download-icon {
    color: var(--brand-primary);
    flex-shrink: 0;
  }

  .download-content {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .download-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--brand-text);
    margin: 0;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: var(--brand-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius-md);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .download-btn:hover {
    background: var(--brand-primary-dark);
    transform: translateY(-2px);
  }

  /* CTA Section */
  .cta-card {
    padding: var(--space-3xl);
    text-align: center;
  }

  .cta-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-md);
    color: var(--brand-text);
  }

  .cta-description {
    font-size: var(--text-lg);
    color: var(--brand-text-muted);
    margin-bottom: var(--space-2xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: center;
  }

  /* Responsive: Tablet */
  @media (min-width: 768px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  /* Responsive: Desktop */
  @media (min-width: 1024px) {
    .page-title {
      font-size: var(--text-6xl);
    }

    .cta-title {
      font-size: var(--text-5xl);
    }
  }
</style>
