---
/**
 * Shop Components Demo Page
 * Showcases the unused ShoppingCart and ProductCard components
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import ShoppingCart from "../components/shop/ShoppingCart.astro";
import ProductCard from "../components/shop/ProductCard.astro";
---

<BaseLayout title="Shop Components Demo">
  <section class="demo-section">
    <div class="container container-7xl">
      <h1 class="demo-title">Shop Components Demo</h1>
      <p class="demo-description">
        These are the unused shop components (ShoppingCart + ProductCard).
        The active cart system uses MiniCart + CartIcon instead.
      </p>

      <h2 class="demo-subtitle">ProductCard Components</h2>
      <p class="demo-note">Click "Add to cart" to test the ShoppingCart panel (bottom-right FAB button)</p>

      <div class="products-grid">
        <ProductCard
          id="demo-1"
          name="Boundaries Workbook"
          description="A practical guide to setting and maintaining healthy boundaries in relationships."
          price={19.99}
          image="/MiniKart/MiniKart-Fallback-1.png"
        />
        <ProductCard
          id="demo-2"
          name="Self-Care Journal"
          description="Daily prompts and exercises to build a sustainable self-care practice."
          price={14.99}
          image="/MiniKart/MiniKart-Fallback-2.png"
        />
        <ProductCard
          id="demo-3"
          name="Mindfulness Audio Pack"
          description="Guided meditations and breathing exercises for stress relief."
          price={9.99}
          image="/MiniKart/MiniKart-Fallback-3.png"
        />
        <ProductCard
          id="demo-4"
          name="Free Resource Guide"
          description="Starter kit with essential tips for your wellness journey."
          price={0}
          image="/MiniKart/MiniKart-Fallback-4.png"
        />
      </div>

      <div class="demo-divider"></div>

      <h2 class="demo-subtitle">ShoppingCart Component</h2>
      <p class="demo-note">
        This is a full slide-out panel cart (vs the dropdown MiniCart).
        Look for the floating cart button in the bottom-right corner.
      </p>
    </div>
  </section>

  <!-- The ShoppingCart component with its own cart system -->
  <ShoppingCart />
</BaseLayout>

<style>
  .demo-section {
    padding: var(--space-4xl) 0;
    min-height: 100vh;
    background: var(--color-Background-100);
  }

  .demo-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    font-family: var(--font-heading);
    color: var(--color-Text-700);
    margin-bottom: var(--space-md);
    text-align: center;
  }

  .demo-description {
    font-size: var(--text-lg);
    font-family: var(--font-body);
    color: var(--color-Text-500);
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-3xl);
    line-height: var(--leading-relaxed);
  }

  .demo-subtitle {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    font-family: var(--font-heading);
    color: var(--color-Text-700);
    margin-bottom: var(--space-sm);
  }

  .demo-note {
    font-size: var(--text-base);
    font-family: var(--font-body);
    color: var(--color-Text-500);
    margin-bottom: var(--space-xl);
  }

  .products-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-md);
    margin-bottom: var(--space-3xl);
  }

  .demo-divider {
    height: 1px;
    background: var(--color-Neutral-200);
    margin: var(--space-3xl) 0;
  }

  @media (max-width: 767px) {
    .demo-section {
      padding: var(--space-2xl) var(--space-md);
    }

    .demo-title {
      font-size: var(--text-2xl);
    }

    .products-grid {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  // Bridge: Make the ShoppingCart's addItem work with ProductCard
  // ProductCard calls window.addToCart, but ShoppingCart uses window.cart.addItem

  // Wait for both systems to initialize
  setTimeout(() => {
    const originalAddToCart = (window as any).addToCart;

    // Override addToCart to use ShoppingCart instead of MiniCart
    (window as any).addToCart = function(item: { id: string; name: string; price: number; image?: string }) {
      // Use ShoppingCart's cart system
      if ((window as any).cart && typeof (window as any).cart.addItem === 'function') {
        (window as any).cart.addItem(item);
      } else {
        console.warn('ShoppingCart not initialized');
      }
    };
  }, 100);
</script>
