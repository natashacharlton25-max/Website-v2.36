---
/**
 * Tiny Menu Page
 * A dedicated navigation page for very small screens
 * Accessible via hamburger menu for mobile devices
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { MENU_SECTIONS, MENU_ACTIONS } from '../config/navigation';
---

<BaseLayout
  title="Menu | Navigation"
  description="Site navigation menu"
>
  <div class="tinymenu-container">
    <div class="tinymenu-header">
      <h1>Menu</h1>
    </div>

    <nav class="tinymenu-nav">
      {MENU_SECTIONS.map(section => (
        <section class="menu-section">
          <h2 class="section-label">{section.label}</h2>
          <ul class="menu-list">
            {section.links.map(link => (
              <li><a href={link.href}>{link.text}</a></li>
            ))}
          </ul>
        </section>
      ))}
    </nav>

    <!-- Quick Actions -->
    <div class="tinymenu-actions">
      <a href={MENU_ACTIONS[0].href} class="btn btn-primary btn-block">{MENU_ACTIONS[0].text}</a>
      <a href={MENU_ACTIONS[1].href} class="btn btn-outline btn-block">{MENU_ACTIONS[1].text}</a>
    </div>
  </div>
</BaseLayout>

<style>
  .tinymenu-container {
    min-height: 100vh;
    padding: var(--space-xl) var(--space-lg);
    background: var(--color-Neutral-500);
  }

  .tinymenu-header {
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-Text-300);
  }

  .tinymenu-header h1 {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    margin: 0;
  }

  .tinymenu-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
    margin-bottom: var(--space-4xl);
  }

  .menu-section {
    padding: 0;
  }

  .section-label {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-Text-500);
    margin: 0 0 var(--space-md);
  }

  .menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .menu-list li {
    margin: 0;
  }

  .menu-list a {
    display: block;
    padding: var(--space-sm) 0;
    color: var(--color-Text-700);
    text-decoration: none;
    transition: all var(--transition-fast);
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    font-family: var(--font-body);
  }

  .menu-list a:hover,
  .menu-list a:focus {
    color: var(--color-Primary-600);
    transform: translateX(4px);
  }

  .menu-list a:active {
    color: var(--color-Primary-700);
  }

  .tinymenu-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-top: var(--space-4xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-Text-300);
  }

  .btn-block {
    width: 100%;
    text-align: center;
    justify-content: center;
  }

  /* Under 200px - ultra compact */
  @media (max-width: 200px) {
    .tinymenu-container {
      padding: var(--space-md) var(--space-sm);
    }

    .tinymenu-header {
      margin-bottom: var(--space-xl);
    }

    .tinymenu-header h1 {
      font-size: var(--text-xl);
    }

    .tinymenu-nav {
      gap: var(--space-xl);
    }

    .section-label {
      font-size: 0.65rem;
      margin-bottom: var(--space-xs);
    }

    .menu-list {
      gap: var(--space-xs);
    }

    .menu-list a {
      padding: var(--space-xs) 0;
      font-size: var(--text-sm);
    }

    .tinymenu-actions {
      margin-top: var(--space-2xl);
      padding-top: var(--space-lg);
      gap: var(--space-sm);
    }

    .tinymenu-actions .btn {
      padding: var(--space-xs) var(--space-sm);
      font-size: var(--text-xs);
    }
  }

  /* Small screens - compact */
  @media (max-width: 360px) {
    .tinymenu-container {
      padding: var(--space-lg) var(--space-md);
    }

    .tinymenu-header h1 {
      font-size: var(--text-2xl);
    }

    .menu-list a {
      font-size: var(--text-base);
    }
  }

  /* Small tablets - show hint to use regular nav */
  @media (min-width: 768px) {
    .tinymenu-container::before {
      content: 'Tip: You can use the full navigation menu on this screen size';
      display: block;
      padding: var(--space-md);
      background: rgba(255, 255, 255, 0.9);
      color: var(--color-Primary-700);
      border-radius: var(--border-radius-md);
      margin-bottom: var(--space-xl);
      text-align: center;
      font-size: var(--text-sm);
      border: 1px solid var(--color-Primary-200);
    }
  }
</style>
