---
import BaseLayout from '../layouts/BaseLayout.astro';
import AccessibilityPanel from '../components/a11y/AccessibilityPanel.astro';
---

<BaseLayout
  title="Accessibility Settings | Your Brand Name"
  description="Customize your browsing experience with our comprehensive accessibility settings. Adjust text size, contrast, fonts, and more to suit your needs."
>
  <div class="accessibility-page">
    <div class="accessibility-page__header">
      <div class="container container-7xl">
        <h1 class="accessibility-page__title">Accessibility Settings</h1>
        <p class="accessibility-page__description">
          Customize your browsing experience to suit your needs. All settings are automatically saved and applied across the entire website.
        </p>
      </div>
    </div>

    <div class="accessibility-page__content">
      <AccessibilityPanel mode="page" />
    </div>

    <div class="accessibility-page__info">
      <div class="container container-7xl">
        <div class="info-grid">
          <div class="info-card">
            <div class="info-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
            <h3>Personalized Experience</h3>
            <p>Your settings are saved automatically and apply to every page you visit on our website.</p>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
            </div>
            <h3>Privacy First</h3>
            <p>All accessibility settings are stored locally on your device. We don't track or share your preferences.</p>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
              </svg>
            </div>
            <h3>WCAG Compliant</h3>
            <p>Our accessibility features meet and exceed WCAG 2.1 AA standards for web accessibility.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .accessibility-page {
    min-height: 100vh;
    background: var(--color-Neutral-50);
  }

  .accessibility-page__header {
    background: white;
    padding: var(--space-3xl) 0;
    border-bottom: 1px solid var(--color-Neutral-200);
    text-align: center;
  }

  .accessibility-page__title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-Text-700);
    margin-bottom: var(--space-md);
  }

  .accessibility-page__description {
    font-size: var(--text-lg);
    color: var(--color-Text-500);
    max-width: 700px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }

  .accessibility-page__content {
    padding: var(--space-3xl) 0;
  }

  .accessibility-page__info {
    padding: var(--space-3xl) 0;
    background: white;
    border-top: 1px solid var(--color-Neutral-200);
  }

  .info-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  .info-card {
    text-align: center;
    padding: var(--space-xl);
  }

  .info-icon {
    color: var(--color-Primary-500);
    margin-bottom: var(--space-lg);
    display: flex;
    justify-content: center;
  }

  .info-card h3 {
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-Text-700);
    margin-bottom: var(--space-sm);
  }

  .info-card p {
    color: var(--color-Text-500);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  @media (min-width: 768px) {
    .accessibility-page__title {
      font-size: var(--text-5xl);
    }

    .info-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .accessibility-page__title {
      font-size: var(--text-6xl);
    }
  }
</style>
